<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>Dardcor</title> 
    <link rel="icon" href="/logo.png">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        html { scroll-behavior: smooth; }
        body { 
            background-color: #0f172a; 
            min-height: 100vh; 
            font-family: 'Poppins', sans-serif; 
            overflow-x: hidden; 
            color: #cbd5e1; 
        }
        .sidebar {
            background-color: #1e293b;
            box-shadow: 5px 0 20px rgba(0,0,0,0.4);
            border-right: 1px solid #334155;
        }
        .navbar {
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
        }
        .navbar-scrolled {
            background-color: rgba(15, 23, 42, 0.95);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
            border-bottom: 1px solid #334155;
        }
        .secret-card {
            background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
            border: 1px solid #334155;
            box-shadow: 0 10px 30px -5px rgba(0, 0, 0, 0.3);
            transition: all 0.3s;
        }
        .secret-card:hover { transform: translateY(-3px); border-color: #6366f1; }
        .modal-content { background: linear-gradient(145deg, #1e293b, #0f172a); border: 1px solid #334155; }
        input, select { background: rgba(15, 23, 42, 0.7); border: 1px solid #334155; color: white; }
        input:focus, select:focus { border-color: #6366f1; box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.2); outline: none; }
    </style>
</head>
<body class="relative">

    <div class="relative min-h-screen">

        <aside id="sidebar" class="sidebar fixed h-full z-50 w-0 p-0 text-white transition-all duration-300 ease-in-out overflow-hidden flex-shrink-0 flex flex-col">
            <div class="flex items-center gap-4 pb-4 border-b border-white/10 mb-4 flex-shrink-0 px-6 pt-6">
                <button id="sidebarCloseButton" class="p-1 rounded-full text-white/70 hover:bg-white/10 hover:text-white transition-colors lg:hidden">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                </button>
                <h2 class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-500">Secret Area</h2>
            </div>
            
            <nav class="flex-grow px-6"> 
                <ul>
                    <li class="mb-5">
                        <a href="/secret/home" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors hover:bg-white/10 text-gray-300 hover:text-white">
                            <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6-4a1 1 0 001-1v-1a1 1 0 10-2 0v1a1 1 0 001 1z"></path></svg>
                            <span>Home</span>
                        </a>
                    </li>
                    <li class="mb-5">
                        <a href="/secret/mywallet" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors bg-blue-600 text-white shadow-lg shadow-blue-600/20">
                            <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                            <span>Secret Wallet</span>
                        </a>
                    </li>
                </ul>
            </nav>

            <div class="mt-auto flex-shrink-0 px-6 pb-6"> 
                <a href="/secret-logout" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors bg-red-500/20 text-red-400 hover:bg-red-500 hover:text-white border border-red-500/30">
                    <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path></svg>
                    <span>Logout</span>
                </a>
            </div>
        </aside>

        <div class="fixed top-0 left-0 w-full p-4 md:p-6 flex justify-center z-30">
            <nav id="navbar" class="w-full max-w-6xl bg-slate-900/80 backdrop-blur-md rounded-full shadow-xl border border-white/10 flex items-center justify-between px-4 py-3 navbar">
                <div class="flex items-center gap-1 md:gap-3">
                    <button id="sidebarToggle" class="text-gray-400 p-2 transition-colors hover:text-white hover:bg-white/10 rounded-full">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
                    </button>
                    <div class="flex items-center gap-2 px-2">
                        <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
                        <span class="text-lg font-bold text-white tracking-wide">SECRET</span>
                    </div>
                </div>
                
                <div class="flex items-center gap-3">
                    <div class="text-right hidden sm:block">
                        <p class="text-sm font-medium text-white"><%= user ? user.username : 'Unknown' %></p>
                        <p class="text-xs text-blue-400">Administrator</p>
                    </div>
                    <div class="w-10 h-10 rounded-full bg-gradient-to-tr from-blue-500 to-purple-600 p-[2px]">
                        <div class="w-full h-full rounded-full bg-slate-900 flex items-center justify-center">
                            <span class="font-bold text-white"><%= user ? user.username.charAt(0).toUpperCase() : 'S' %></span>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
            
        <main class="relative flex items-center justify-center p-4 min-h-screen">
            <div class="container mx-auto w-full max-w-6xl pt-24 md:pt-28">
        
                <div class="secret-card rounded-xl overflow-hidden mb-6">
                    <div class="p-6">
                        <div class="flex justify-between items-center mb-4">
                            <div>
                                <p class="text-slate-400">Hidden Funds</p>
                                <h2 class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400">Rp <%= balance.toLocaleString('id-ID', { minimumFractionDigits: 2 }) %></h2>
                            </div>
                            <div class="bg-blue-600/20 text-blue-400 p-3 rounded-full border border-blue-500/50 shadow-lg shadow-blue-500/20">
                                <i class="fas fa-wallet text-2xl"></i>
                            </div>
                        </div>
                        <div class="grid grid-cols-2 md:grid-cols-4 gap-2 text-center">
                            <button onclick="openModal('add')" class="bg-blue-600 hover:bg-blue-500 p-3 rounded-lg text-white transition-all shadow-lg shadow-blue-600/20 border border-blue-500/50"> <i class="fas fa-plus-circle text-xl block mx-auto mb-1"></i> <span class="text-xs font-medium">Deposit</span> </button>
                            <button onclick="openModal('transfer')" class="bg-purple-600 hover:bg-purple-500 p-3 rounded-lg text-white transition-all shadow-lg shadow-purple-600/20 border border-purple-500/50"> <i class="fas fa-exchange-alt text-xl block mx-auto mb-1"></i> <span class="text-xs font-medium">Transfer</span> </button>
                            <button onclick="openModal('withdraw')" class="bg-red-600 hover:bg-red-500 p-3 rounded-lg text-white transition-all shadow-lg shadow-red-600/20 border border-red-500/50"> <i class="fas fa-money-bill-wave text-xl block mx-auto mb-1"></i> <span class="text-xs font-medium">Withdraw</span> </button>
                            <button onclick="openModal('payment')" class="bg-emerald-600 hover:bg-emerald-500 p-3 rounded-lg text-white transition-all shadow-lg shadow-emerald-600/20 border border-emerald-500/50"> <i class="fas fa-qrcode text-xl block mx-auto mb-1"></i> <span class="text-xs font-medium">Pay</span> </button>
                        </div>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
                    <div class="secret-card p-4 rounded-xl">
                        <div class="flex items-center">
                            <div class="bg-emerald-500/10 text-emerald-400 p-2 rounded-full mr-3 border border-emerald-500/30"><i class="fas fa-arrow-down"></i></div>
                            <div>
                                <p class="text-slate-400 text-sm">Total Inflow</p>
                                <p class="font-bold text-emerald-400">Rp <%= (totals.total_deposit || 0).toLocaleString('id-ID', { minimumFractionDigits: 2 }) %></p>
                            </div>
                        </div>
                    </div>
                    <div class="secret-card p-4 rounded-xl">
                        <div class="flex items-center">
                            <div class="bg-red-500/10 text-red-400 p-2 rounded-full mr-3 border border-red-500/30"><i class="fas fa-arrow-up"></i></div>
                            <div>
                                <p class="text-slate-400 text-sm">Total Outflow</p>
                                <p class="font-bold text-red-400">Rp <%= ((totals.total_withdraw || 0) + (totals.total_transfer || 0) + (totals.total_payment || 0)).toLocaleString('id-ID', { minimumFractionDigits: 2 }) %></p>
                            </div>
                        </div>
                    </div>
                    <div class="secret-card p-4 rounded-xl">
                        <div class="flex items-center">
                            <div class="bg-yellow-500/10 text-yellow-400 p-2 rounded-full mr-3 border border-yellow-500/30"><i class="fas fa-gift"></i></div>
                            <div>
                                <p class="text-slate-400 text-sm">Rewards</p>
                                <p class="font-bold text-yellow-400">Rp <%= (totals.total_reward || 0).toLocaleString('id-ID', { minimumFractionDigits: 2 }) %></p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="secret-card rounded-xl overflow-hidden">
                    <div class="p-4 border-b border-slate-700 flex justify-between items-center bg-slate-900/50">
                        <h2 class="font-bold text-lg text-white">Transaction Logs</h2>
                        <div class="relative">
                            <select class="bg-slate-800 border-0 rounded-lg pl-3 pr-8 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 text-white"> 
                                <option>All Types</option> 
                                <option>Deposit</option> 
                                <option>Withdrawal</option> 
                            </select>
                            <div class="absolute right-3 top-2.5 pointer-events-none"> <i class="fas fa-chevron-down text-slate-400 text-xs"></i> </div>
                        </div>
                    </div>
                    <div class="divide-y divide-slate-700/50">
                        <% if(transactions.length === 0) { %>
                            <div class="p-10 text-center text-slate-500">
                                <i class="fas fa-ghost text-4xl mb-3 opacity-50"></i>
                                <p>No covert operations found.</p>
                            </div>
                        <% } else { %>
                            <% transactions.forEach(row => { %>
                                <div class="p-4 hover:bg-slate-800/50 transition duration-200" 
                                     id="tx-<%= row.id %>" 
                                     data-row='<%- JSON.stringify(row).replace(new RegExp("'", "g"), "&#39;") %>'>
                                    
                                    <div class="flex justify-between items-center">
                                        <div class="flex items-center">
                                            <div class="mr-4">
                                                <% if(row.type === 'deposit') { %>
                                                    <div class="bg-emerald-500/10 text-emerald-400 p-2 rounded-full border border-emerald-500/20"><i class="fas fa-arrow-down"></i></div>
                                                <% } else if(row.type === 'withdraw') { %>
                                                    <div class="bg-red-500/10 text-red-400 p-2 rounded-full border border-red-500/20"><i class="fas fa-arrow-up"></i></div>
                                                <% } else if(row.type === 'reward') { %>
                                                    <div class="bg-yellow-500/10 text-yellow-400 p-2 rounded-full border border-yellow-500/20"><i class="fas fa-gift"></i></div>
                                                <% } else if(row.type === 'transfer') { %>
                                                    <div class="bg-blue-500/10 text-blue-400 p-2 rounded-full border border-blue-500/20"><i class="fas fa-exchange-alt"></i></div>
                                                <% } else { %>
                                                    <div class="bg-purple-500/10 text-purple-400 p-2 rounded-full border border-purple-500/20"><i class="fas fa-qrcode"></i></div>
                                                <% } %>
                                            </div>
                                            <div>
                                                <p class="font-medium text-white"><%= row.description %></p>
                                                <p class="text-xs text-slate-500 mt-0.5 font-mono">
                                                    <% const date = new Date(row.created_at); %>
                                                    <%= date.toLocaleString('en-US', { day: '2-digit', month: 'short', year: 'numeric', hour: '2-digit', minute: '2-digit', hour12: false }) %>
                                                    <% if(row.recipient) { %>
                                                        <span class="text-xs bg-slate-800 px-1.5 py-0.5 rounded ml-1 border border-slate-700">â†’ <%= row.recipient %></span>
                                                    <% } %>
                                                </p>
                                            </div>
                                        </div>
                                        <div class="text-right">
                                            <p class="font-bold font-mono tracking-wide <%= row.type === 'deposit' || row.type === 'reward' ? 'text-emerald-400' : 'text-red-400' %>">
                                                <%= (row.type === 'deposit' || row.type === 'reward' ? '+' : '-') + ' ' + (parseFloat(row.amount) || 0).toLocaleString('id-ID', { minimumFractionDigits: 2 }) %>
                                            </p>
                                            <div class="flex space-x-3 mt-2 justify-end opacity-0 hover:opacity-100 transition-opacity duration-200">
                                                <button onclick='openEditModal(<%= row.id %>)' class="text-blue-400 hover:text-blue-300 text-xs flex items-center gap-1">
                                                    <i class="fas fa-edit"></i> Edit
                                                </button>
                                                <form method="POST" action="/secret/bank/delete" onsubmit="return confirm('Purge this record? This action is irreversible.')" class="inline">
                                                    <input type="hidden" name="id" value="<%= row.id %>">
                                                    <button type="submit" class="text-red-400 hover:text-red-300 text-xs flex items-center gap-1">
                                                        <i class="fas fa-trash"></i> Purge
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        <% } %>
                    </div>
                </div>
            </div>
            
        </main>
    </div> 
    
    <div id="sidebarBackdrop" class="fixed inset-0 bg-black/50 z-40 hidden backdrop-blur-sm"></div>

    <div id="transactionModal" class="fixed inset-0 bg-black/80 flex items-center justify-center p-4 z-50 hidden backdrop-blur-md">
        <div class="modal-content rounded-xl w-full max-w-md border border-slate-600 shadow-2xl">
            <div class="p-4 border-b border-slate-700 flex justify-between items-center bg-slate-900/50">
                <h3 class="font-bold text-lg text-white" id="modalTitle">New Operation</h3>
                <button onclick="closeModal()" class="text-slate-400 hover:text-white transition-colors"> <i class="fas fa-times"></i> </button>
            </div>
            <form method="POST" id="transactionForm" action="/secret/bank/add">
                <input type="hidden" name="id" id="editId">
                <div class="p-5 space-y-4">
                    <div>
                        <label class="block text-slate-400 text-xs uppercase font-bold tracking-wider mb-1">Type</label>
                        <select name="type" id="transactionType" class="w-full p-3 rounded-lg bg-slate-900/50 border border-slate-700 text-white focus:border-blue-500 transition-colors"> 
                            <option value="deposit">Deposit (Inflow)</option> 
                            <option value="withdraw">Withdraw (Outflow)</option> 
                            <option value="transfer">Transfer</option> 
                            <option value="payment">Payment</option> 
                            <option value="reward">Reward</option> 
                        </select>
                    </div>
                    <div>
                        <label class="block text-slate-400 text-xs uppercase font-bold tracking-wider mb-1">Amount</label>
                        <div class="relative">
                            <span class="absolute left-3 top-3 text-slate-500">Rp</span>
                            <input type="number" step="0.01" name="amount" id="amount" required class="w-full p-3 pl-10 rounded-lg bg-slate-900/50 border border-slate-700 text-white focus:border-blue-500 transition-colors font-mono">
                        </div>
                    </div>
                    <div id="recipientField" class="hidden">
                        <label class="block text-slate-400 text-xs uppercase font-bold tracking-wider mb-1">Recipient</label>
                        <input type="text" name="recipient" id="recipient" class="w-full p-3 rounded-lg bg-slate-900/50 border border-slate-700 text-white focus:border-blue-500 transition-colors">
                    </div>
                    <div>
                        <label class="block text-slate-400 text-xs uppercase font-bold tracking-wider mb-1">Description</label>
                        <input type="text" name="description" id="description" required class="w-full p-3 rounded-lg bg-slate-900/50 border border-slate-700 text-white focus:border-blue-500 transition-colors" placeholder="Operation details...">
                    </div>
                </div>
                <div class="p-4 border-t border-slate-700 flex justify-end space-x-3 bg-slate-900/30">
                    <button type="button" onclick="closeModal()" class="px-4 py-2 rounded-lg text-slate-300 hover:text-white hover:bg-slate-800 transition-colors text-sm">Cancel</button>
                    <button type="submit" class="px-6 py-2 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white font-bold rounded-lg shadow-lg shadow-blue-600/20 transition-all text-sm">Execute</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const toggleButton = document.getElementById('sidebarToggle');
            const sidebar = document.getElementById('sidebar');
            const backdrop = document.getElementById('sidebarBackdrop');
            const closeButton = document.getElementById('sidebarCloseButton');
            const navbar = document.getElementById('navbar');

            function toggleMenu() {
                sidebar.classList.toggle('w-60'); 
                sidebar.classList.toggle('w-0');   
                sidebar.classList.toggle('p-6'); 
                sidebar.classList.toggle('p-0'); 
                backdrop.classList.toggle('hidden');
            }

            function handleScroll() {
                if (window.scrollY > 10) {
                    navbar.classList.add('navbar-scrolled');
                } else {
                    navbar.classList.remove('navbar-scrolled');
                }
            }

            if (toggleButton) toggleButton.addEventListener('click', toggleMenu);
            if (backdrop) backdrop.addEventListener('click', toggleMenu);
            if (closeButton) closeButton.addEventListener('click', toggleMenu);

            window.addEventListener('scroll', handleScroll);
            handleScroll();
        });

        const transactionModal = document.getElementById('transactionModal');
        const transactionForm = document.getElementById('transactionForm');
        const modalTitle = document.getElementById('modalTitle');
        const transactionType = document.getElementById('transactionType');
        const recipientField = document.getElementById('recipientField');
        const editIdInput = document.getElementById('editId');
        
        function openModal(type, data = null) {
            if (!transactionModal || !transactionForm) return;
            
            transactionForm.reset();
            editIdInput.value = '';
            
            // Updated routes for secret context
            transactionForm.action = data ? '/secret/bank/edit' : '/secret/bank/add'; 
            
            if (data) { 
                modalTitle.textContent = 'Edit Operation';
                editIdInput.value = data.id;
                transactionType.value = data.type;
                document.getElementById('amount').value = data.amount;
                document.getElementById('description').value = data.description;
                
                if (data.type === 'transfer' || data.type === 'payment') {
                    document.getElementById('recipient').value = data.recipient || '';
                    recipientField.classList.remove('hidden');
                } else {
                    recipientField.classList.add('hidden');
                }
            } else { 
                if (type === 'transfer') {
                    transactionType.value = 'transfer';
                    modalTitle.textContent = 'Transfer Funds';
                    recipientField.classList.remove('hidden');
                } else if (type === 'withdraw') {
                    transactionType.value = 'withdraw';
                    modalTitle.textContent = 'Withdraw Funds';
                    recipientField.classList.add('hidden');
                } else if (type === 'payment') {
                    transactionType.value = 'payment';
                    modalTitle.textContent = 'Make Payment';
                    recipientField.classList.remove('hidden');
                } else { 
                    transactionType.value = 'deposit'; 
                    modalTitle.textContent = 'Add Deposit';
                    recipientField.classList.add('hidden');
                }
            }
            
            transactionModal.classList.remove('hidden');
        }
        
        function openEditModal(transactionId) {
            try {
                const rowElement = document.getElementById('tx-' + transactionId);
                if (!rowElement) return;
                const dataRow = rowElement.getAttribute('data-row');
                if (!dataRow) return;
                const data = JSON.parse(dataRow);
                openModal('edit', data);
            } catch (error) {
                console.error(error);
            }
        }
        
        function closeModal() {
            if (transactionModal) {
                transactionModal.classList.add('hidden');
            }
        }
        
        if (transactionType) {
            transactionType.addEventListener('change', function() {
                if (this.value === 'transfer' || this.value === 'payment') {
                    recipientField.classList.remove('hidden');
                } else {
                    recipientField.classList.add('hidden');
                }
            });
        }
    </script>
</body>
</html>