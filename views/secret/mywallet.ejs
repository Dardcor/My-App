<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="theme-color" content="#0f172a">
    <link rel="manifest" href="/manifest.json">

    <title>Dardcor</title> 
    <link rel="icon" href="/logo.png">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        body { 
            background-color: #0f172a; 
            min-height: 100vh; 
            font-family: 'Poppins', sans-serif; 
            overflow-x: hidden; 
            color: #cbd5e1; 
        }
        .sidebar { 
            background-color: #1e293b; 
            box-shadow: 5px 0 20px rgba(0,0,0,0.4); 
            border-right: 1px solid #334155; 
            z-index: 50;
        }
        .navbar { 
            transition: all 0.3s ease; 
            backdrop-filter: blur(10px); 
            z-index: 40;
        }
        .navbar-scrolled { 
            background-color: rgba(15, 23, 42, 0.95); 
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3); 
            border-bottom: 1px solid #334155; 
        }
        
        /* Wallet Card Styling */
        .secret-card { 
            background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%); 
            border: 1px solid #334155; 
            box-shadow: 0 10px 30px -5px rgba(0, 0, 0, 0.3); 
            transition: all 0.3s; 
        }
        .secret-card:hover { transform: translateY(-3px); border-color: #6366f1; }
        
        .modal-content { 
            background: linear-gradient(145deg, #1e293b, #0f172a); 
            border: 1px solid #334155; 
        }
        input, select { 
            background: rgba(15, 23, 42, 0.7); 
            border: 1px solid #334155; 
            color: white; 
        }
        input:focus, select:focus { 
            border-color: #6366f1; 
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.2); 
            outline: none; 
        }
        
        /* Credit Card Effect */
        .credit-card {
            background: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
            border-radius: 1rem;
            box-shadow: 0 10px 25px -5px rgba(99, 102, 241, 0.4);
            position: relative;
            overflow: hidden;
        }
        .credit-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 100%);
            pointer-events: none;
        }

        .no-scrollbar::-webkit-scrollbar { display: none; }
        .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
        
        @media (max-width: 640px) {
            .container { padding-left: 1rem; padding-right: 1rem; }
            .secret-card { margin-bottom: 1rem; }
            .grid-cols-2 { grid-template-columns: 1fr; }
            .p-6 { padding: 1rem; }
            .text-2xl { font-size: 1.5rem; }
            .text-3xl { font-size: 1.75rem; }
        }
        @media (max-width: 768px) {
            .flex-row { flex-direction: column; }
            .gap-4 { gap: 1rem; }
            .p-4 { padding: 0.75rem; }
        }
    </style>
</head>
<body class="relative">

    <div id="sidebarBackdrop" class="fixed inset-0 bg-black/50 z-40 hidden lg:hidden transition-opacity duration-300 opacity-0"></div>

    <div class="relative min-h-screen">

        <aside id="sidebar" class="sidebar fixed top-0 left-0 h-full w-64 p-0 text-white transform -translate-x-full transition-transform duration-300 ease-in-out flex flex-col">
            
            <div class="flex items-center justify-between pb-4 border-b border-white/20 mb-4 flex-shrink-0 px-6 pt-6">
                <h2 class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-500">Secret Area</h2>
                <button id="sidebarCloseButton" class="p-1 rounded-full text-white/70 hover:bg-white/10 hover:text-white transition-colors">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                </button>
            </div>
            
            <nav class="flex-grow px-6 overflow-y-auto no-scrollbar"> 
                <ul class="space-y-3">
                    <li>
                        <a href="/secret/home" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors hover:bg-blue-600 text-gray-300 hover:text-white whitespace-nowrap">
                            <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6-4a1 1 0 001-1v-1a1 1 0 10-2 0v1a1 1 0 001 1z"></path></svg>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a href="/secret/myserver" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors hover:bg-blue-600 text-gray-300 hover:text-white whitespace-nowrap">
                            <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path></svg>
                            <span>My Server</span>
                        </a>
                    </li>
                    <li>
                        <a href="/secret/mywallet" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors bg-blue-600 text-white whitespace-nowrap">
                            <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                            <span>Secret Wallet</span>
                        </a>
                    </li>
                </ul>
            </nav>

            <div class="mt-auto flex-shrink-0 px-6 pb-6"> 
                <a href="/secret-logout" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors bg-red-500/20 text-red-400 hover:bg-red-500 hover:text-white border border-red-500/30 whitespace-nowrap">
                    <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path></svg>
                    <span>Logout</span>
                </a>
            </div>
        </aside>

        <div class="min-h-screen">
            
            <div class="fixed top-0 left-0 w-full p-4 md:p-6 flex justify-center z-30">
                <nav id="navbar" class="w-full max-w-6xl bg-slate-900/80 backdrop-blur-md rounded-full shadow-xl border border-white/10 flex items-center justify-between px-4 py-3 navbar">
                    <div class="flex items-center gap-1 md:gap-3">
                        <button id="sidebarToggle" class="text-gray-400 p-2 transition-colors hover:text-white hover:bg-white/10 rounded-full">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
                        </button>
                        <div class="flex items-center gap-2 px-2">
                            <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
                            <span class="text-lg font-bold text-white tracking-wide">SECRET</span>
                        </div>
                    </div>
                    
                    <div class="flex items-center gap-3">
                        <div class="text-right hidden sm:block">
                            <p class="text-sm font-medium text-white"><%= user ? user.username : 'Unknown' %></p>
                            <p class="text-xs text-blue-400">Administrator</p>
                        </div>
                        <div class="w-10 h-10 rounded-full bg-gradient-to-tr from-blue-500 to-purple-600 p-[2px]">
                            <div class="w-full h-full rounded-full bg-slate-900 flex items-center justify-center">
                                <span class="font-bold text-white"><%= user ? user.username.charAt(0).toUpperCase() : 'S' %></span>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>

            <main class="relative min-h-screen pt-24 md:pt-28">
                <div class="container mx-auto w-full max-w-6xl px-4">
                    
                    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
                        <div class="lg:col-span-2">
                            <div class="credit-card p-6 h-full flex flex-col justify-between text-white relative">
                                <div class="flex justify-between items-start z-10">
                                    <div class="text-2xl font-bold italic opacity-80">Dardcor Bank</div>
                                    <i class="fas fa-wifi text-2xl opacity-70 transform rotate-90"></i>
                                </div>
                                <div class="my-8 z-10">
                                    <div class="text-xs text-indigo-200 mb-1 tracking-wider uppercase">Card Balance</div>
                                    <div class="text-4xl font-bold tracking-tight">Rp <%= balance.toLocaleString('id-ID', { minimumFractionDigits: 2 }) %></div>
                                </div>
                                <div class="flex justify-between items-end z-10">
                                    <div>
                                        <div class="text-xs text-indigo-200 mb-1 uppercase tracking-wider">Card Holder</div>
                                        <div class="text-lg font-medium tracking-wide"><%= user ? user.username.toUpperCase() : 'UNKNOWN' %></div>
                                    </div>
                                    <div class="text-right">
                                        <div class="text-xs text-indigo-200 mb-1 uppercase tracking-wider">Expires</div>
                                        <div class="text-lg font-medium tracking-widest">12/28</div>
                                    </div>
                                </div>
                                <div class="absolute -bottom-10 -right-10 w-48 h-48 bg-white/10 rounded-full blur-2xl"></div>
                                <div class="absolute top-10 -left-10 w-32 h-32 bg-purple-500/20 rounded-full blur-xl"></div>
                            </div>
                        </div>

                        <div class="grid grid-cols-2 gap-4 h-full">
                            <button onclick="openModal('deposit')" class="secret-card p-4 rounded-xl flex flex-col items-center justify-center text-center group cursor-pointer hover:bg-slate-800/80">
                                <div class="w-12 h-12 rounded-full bg-emerald-500/10 text-emerald-400 flex items-center justify-center mb-3 group-hover:scale-110 transition-transform">
                                    <i class="fas fa-arrow-down text-xl"></i>
                                </div>
                                <span class="font-medium text-white">Deposit</span>
                                <span class="text-xs text-slate-400 mt-1">Add Funds</span>
                            </button>
                            <button onclick="openModal('transfer')" class="secret-card p-4 rounded-xl flex flex-col items-center justify-center text-center group cursor-pointer hover:bg-slate-800/80">
                                <div class="w-12 h-12 rounded-full bg-red-500/10 text-red-400 flex items-center justify-center mb-3 group-hover:scale-110 transition-transform">
                                    <i class="fas fa-paper-plane text-xl"></i>
                                </div>
                                <span class="font-medium text-white">Transfer</span>
                                <span class="text-xs text-slate-400 mt-1">Send Money</span>
                            </button>
                            <button class="secret-card p-4 rounded-xl flex flex-col items-center justify-center text-center group cursor-pointer hover:bg-slate-800/80 col-span-2">
                                <div class="w-12 h-12 rounded-full bg-blue-500/10 text-blue-400 flex items-center justify-center mb-3 group-hover:scale-110 transition-transform">
                                    <i class="fas fa-history text-xl"></i>
                                </div>
                                <span class="font-medium text-white">History</span>
                                <span class="text-xs text-slate-400 mt-1">View All Transactions</span>
                            </button>
                        </div>
                    </div>

                    <div class="secret-card rounded-xl overflow-hidden">
                        <div class="p-5 border-b border-slate-700 bg-slate-900/50 flex justify-between items-center">
                            <h3 class="font-bold text-lg text-white">Recent Transactions</h3>
                            <button class="text-xs text-blue-400 hover:text-blue-300">View All</button>
                        </div>
                        <div class="overflow-x-auto">
                            <table class="w-full text-left text-sm text-slate-400">
                                <thead class="bg-slate-800/50 text-xs uppercase font-medium text-slate-300">
                                    <tr>
                                        <th class="px-6 py-4">Transaction</th>
                                        <th class="px-6 py-4">Date</th>
                                        <th class="px-6 py-4 text-right">Amount</th>
                                        <th class="px-6 py-4 text-right">Action</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-slate-700/50">
                                    <% if(transactions.length === 0) { %>
                                        <tr>
                                            <td colspan="4" class="px-6 py-8 text-center text-slate-500">
                                                No transactions found yet.
                                            </td>
                                        </tr>
                                    <% } else { %>
                                        <% transactions.forEach(row => { %>
                                            <tr class="hover:bg-slate-800/30 transition-colors" id="tx-<%= row.id %>" data-row='<%- JSON.stringify(row).replace(new RegExp("'", "g"), "&#39;") %>'>
                                                <td class="px-6 py-4">
                                                    <div class="flex items-center gap-3">
                                                        <div class="w-8 h-8 rounded-full flex items-center justify-center flex-shrink-0 <%= row.type === 'deposit' ? 'bg-emerald-500/10 text-emerald-400' : 'bg-red-500/10 text-red-400' %>">
                                                            <i class="fas <%= row.type === 'deposit' ? 'fa-arrow-down' : 'fa-arrow-up' %> text-xs"></i>
                                                        </div>
                                                        <div>
                                                            <p class="font-medium text-white truncate max-w-[150px] sm:max-w-xs"><%= row.description %></p>
                                                            <p class="text-xs text-slate-500"><%= row.type === 'deposit' ? 'Incoming' : 'Outgoing' %></p>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="px-6 py-4 whitespace-nowrap">
                                                    <%= new Date(row.created_at).toLocaleDateString('id-ID', { day: 'numeric', month: 'short', year: 'numeric' }) %>
                                                </td>
                                                <td class="px-6 py-4 text-right font-mono font-medium <%= row.type === 'deposit' ? 'text-emerald-400' : 'text-red-400' %>">
                                                    <%= (row.type === 'deposit' ? '+' : '-') %> Rp <%= parseFloat(row.amount).toLocaleString('id-ID', { minimumFractionDigits: 2 }) %>
                                                </td>
                                                <td class="px-6 py-4 text-right">
                                                    <div class="flex justify-end gap-2">
                                                        <button onclick='openEditModal(<%= row.id %>)' class="p-1.5 hover:bg-slate-700 rounded text-blue-400 transition-colors" title="Edit">
                                                            <i class="fas fa-pen text-xs"></i>
                                                        </button>
                                                        <form method="POST" action="/secret/bank/delete" onsubmit="return confirm('Delete this record?')" class="inline">
                                                            <input type="hidden" name="id" value="<%= row.id %>">
                                                            <button type="submit" class="p-1.5 hover:bg-slate-700 rounded text-red-400 transition-colors" title="Delete">
                                                                <i class="fas fa-trash text-xs"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </main>
        </div>
    </div>

    <div id="transactionModal" class="fixed inset-0 bg-black/80 flex items-center justify-center p-4 z-50 hidden backdrop-blur-md">
        <div class="modal-content rounded-xl w-full max-w-md border border-slate-600 shadow-2xl mx-4 max-h-[90vh] overflow-y-auto">
            <div class="p-4 border-b border-slate-700 flex justify-between items-center bg-slate-900/50 sticky top-0">
                <h3 class="font-bold text-lg text-white" id="modalTitle">New Transaction</h3>
                <button onclick="closeModal()" class="text-slate-400 hover:text-white transition-colors">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <form method="POST" id="transactionForm" action="/secret/bank/add">
                <input type="hidden" name="id" id="editId">
                <div class="p-4 md:p-5 space-y-4">
                    <div>
                        <label class="block text-slate-400 text-xs uppercase font-bold tracking-wider mb-1">Type</label>
                        <select name="type" id="transactionType" class="w-full p-3 rounded-lg bg-slate-900/50 border border-slate-700 text-white focus:border-blue-500 transition-colors text-sm md:text-base">
                            <option value="deposit">Deposit (In)</option>
                            <option value="transfer">Transfer (Out)</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-slate-400 text-xs uppercase font-bold tracking-wider mb-1">Amount</label>
                        <div class="relative">
                            <span class="absolute left-3 top-3 text-slate-500">Rp</span>
                            <input type="number" step="0.01" name="amount" id="amount" required class="w-full p-3 pl-10 rounded-lg bg-slate-900/50 border border-slate-700 text-white focus:border-blue-500 transition-colors font-mono text-sm md:text-base">
                        </div>
                    </div>
                    <div>
                        <label class="block text-slate-400 text-xs uppercase font-bold tracking-wider mb-1">Description</label>
                        <input type="text" name="description" id="description" required class="w-full p-3 rounded-lg bg-slate-900/50 border border-slate-700 text-white focus:border-blue-500 transition-colors text-sm md:text-base" placeholder="e.g. Payment for service">
                    </div>
                </div>
                <div class="p-4 border-t border-slate-700 flex justify-end space-x-3 bg-slate-900/30 sticky bottom-0">
                    <button type="button" onclick="closeModal()" class="px-4 py-2 rounded-lg text-slate-300 hover:text-white hover:bg-slate-800 transition-colors text-sm">Cancel</button>
                    <button type="submit" class="px-6 py-2 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white font-bold rounded-lg shadow-lg shadow-blue-600/20 transition-all text-sm">Confirm</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const toggleButton = document.getElementById('sidebarToggle');
            const sidebar = document.getElementById('sidebar');
            const backdrop = document.getElementById('sidebarBackdrop');
            const closeButton = document.getElementById('sidebarCloseButton');
            const navbar = document.getElementById('navbar');

            let sidebarOpen = false;

            function openSidebar() {
                sidebar.classList.remove('-translate-x-full');
                if (window.innerWidth < 1024) {
                    backdrop.classList.remove('hidden');
                    setTimeout(() => backdrop.classList.remove('opacity-0'), 10);
                    document.body.style.overflow = 'hidden';
                }
                sidebarOpen = true;
            }

            function closeSidebar() {
                sidebar.classList.add('-translate-x-full');
                if (window.innerWidth < 1024) {
                    backdrop.classList.add('opacity-0');
                    setTimeout(() => backdrop.classList.add('hidden'), 300);
                    document.body.style.overflow = '';
                }
                sidebarOpen = false;
            }

            function toggleSidebar() {
                if (sidebarOpen) {
                    closeSidebar();
                } else {
                    openSidebar();
                }
            }

            if (toggleButton) toggleButton.addEventListener('click', toggleSidebar);
            if (closeButton) closeButton.addEventListener('click', closeSidebar);
            if (backdrop) backdrop.addEventListener('click', closeSidebar);

            window.addEventListener('scroll', () => {
                if (window.scrollY > 10) {
                    navbar.classList.add('navbar-scrolled');
                } else {
                    navbar.classList.remove('navbar-scrolled');
                }
            });

            window.addEventListener('resize', () => {
                if (window.innerWidth >= 1024) {
                    backdrop.classList.add('hidden');
                    backdrop.classList.add('opacity-0');
                    document.body.style.overflow = '';
                    if (sidebarOpen) closeSidebar();
                } else {
                    if (sidebarOpen) {
                        sidebar.classList.add('-translate-x-full');
                        backdrop.classList.add('hidden');
                        backdrop.classList.add('opacity-0');
                        document.body.style.overflow = '';
                        sidebarOpen = false;
                    }
                }
            });

            document.querySelectorAll('nav a').forEach(link => {
                link.addEventListener('click', () => {
                    if (window.innerWidth < 1024) {
                        closeSidebar();
                    }
                });
            });

            if (window.innerWidth >= 1024) {
                closeSidebar();
            }
        });

        // MODAL LOGIC
        const transactionModal = document.getElementById('transactionModal');
        const transactionForm = document.getElementById('transactionForm');
        const modalTitle = document.getElementById('modalTitle');
        const transactionType = document.getElementById('transactionType');
        const editIdInput = document.getElementById('editId');

        function updateModalText(type) {
            if (type === 'deposit') {
                modalTitle.textContent = 'Deposit Funds';
            } else if (type === 'transfer') {
                modalTitle.textContent = 'Transfer Funds';
            } else {
                modalTitle.textContent = 'New Transaction';
            }
        }

        function openModal(type, data = null) {
            if (!transactionModal || !transactionForm) return;

            transactionForm.reset();
            editIdInput.value = '';
            transactionForm.action = data ? '/secret/bank/edit' : '/secret/bank/add';

            if (data) {
                modalTitle.textContent = 'Edit Transaction';
                editIdInput.value = data.id;
                
                let actualType = data.type;
                // Normalize types if needed
                if (['reward', 'withdraw', 'payment'].includes(actualType)) {
                    actualType = (parseFloat(data.amount) > 0) ? 'deposit' : 'transfer';
                }
                
                transactionType.value = actualType;
                document.getElementById('amount').value = data.amount;
                document.getElementById('description').value = data.description;
            } else {
                transactionType.value = type;
                updateModalText(type);
            }
            
            transactionModal.classList.remove('hidden');
        }

        function openEditModal(transactionId) {
            try {
                const rowElement = document.getElementById('tx-' + transactionId);
                if (!rowElement) return;
                const dataRow = rowElement.getAttribute('data-row');
                if (!dataRow) return;
                const cleanDataRow = dataRow.replace(/&#39;/g, "'");
                const data = JSON.parse(cleanDataRow);
                openModal('edit', data);
            } catch (error) {
                console.error("Error opening edit modal:", error);
            }
        }

        function closeModal() {
            if (transactionModal) {
                transactionModal.classList.add('hidden');
            }
        }

        if (transactionType) {
            transactionType.addEventListener('change', function() {
                updateModalText(this.value);
            });
        }
    </script>
</body>
</html>