<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>Dardcor</title>
    <link rel="icon" href="/logo.png">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        html { scroll-behavior: smooth; }
        body {
            background-color: #0f172a;
            min-height: 100vh;
            font-family: 'Poppins', sans-serif;
            overflow-x: hidden;
            color: #cbd5e1;
        }
        .sidebar {
            background-color: #1e293b;
            box-shadow: 5px 0 20px rgba(0,0,0,0.4);
            border-right: 1px solid #334155;
            z-index: 50;
        }
        .navbar {
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
            z-index: 40;
        }
        .navbar-scrolled {
            background-color: rgba(15, 23, 42, 0.95);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
            border-bottom: 1px solid #334155;
        }
        .secret-card {
            background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
            border: 1px solid #334155;
            box-shadow: 0 10px 30px -5px rgba(0, 0, 0, 0.3);
            transition: all 0.3s;
        }
        .secret-card:hover { transform: translateY(-3px); border-color: #6366f1; }
        .modal-content { background: linear-gradient(145deg, #1e293b, #0f172a); border: 1px solid #334155; }
        input, select { background: rgba(15, 23, 42, 0.7); border: 1px solid #334155; color: white; }
        input:focus, select:focus { border-color: #6366f1; box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.2); outline: none; }
        .no-scrollbar::-webkit-scrollbar { display: none; }
        .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
        
        /* Responsive improvements */
        @media (max-width: 640px) {
            .container { padding-left: 1rem; padding-right: 1rem; }
            .secret-card { margin-bottom: 1rem; }
            .grid-cols-2 { grid-template-columns: 1fr; }
            .p-6 { padding: 1rem; }
            .text-2xl { font-size: 1.5rem; }
            .text-3xl { font-size: 1.75rem; }
        }
        
        @media (max-width: 768px) {
            .flex-row { flex-direction: column; }
            .gap-4 { gap: 1rem; }
            .p-4 { padding: 0.75rem; }
        }
    </style>
</head>
<body class="relative">

    <div id="sidebarBackdrop" class="fixed inset-0 bg-black/50 z-40 hidden lg:hidden transition-opacity duration-300 opacity-0"></div>

    <div class="relative min-h-screen">

        <aside id="sidebar" class="sidebar fixed top-0 left-0 h-full w-64 p-0 text-white transform -translate-x-full transition-transform duration-300 ease-in-out flex flex-col">

            <div class="flex items-center justify-between pb-4 border-b border-white/20 mb-4 flex-shrink-0 px-6 pt-6">
                <h2 class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-500">Secret Area</h2>
                <button id="sidebarCloseButton" class="p-1 rounded-full text-white/70 hover:bg-white/10 hover:text-white transition-colors">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                </button>
            </div>

            <nav class="flex-grow px-6 overflow-y-auto no-scrollbar">
                <ul class="space-y-3">
                    <li>
                        <a href="/secret/home" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors hover:bg-blue-600 text-gray-300 hover:text-white whitespace-nowrap">
                            <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6-4a1 1 0 001-1v-1a1 1 0 10-2 0v1a1 1 0 001 1z"></path></svg>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a href="/secret/myserver" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors hover:bg-blue-600 text-gray-300 hover:text-white whitespace-nowrap">
                            <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path></svg>
                            <span>My Server</span>
                        </a>
                    </li>
                    <li>
                        <a href="/secret/mywallet" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors bg-blue-600 text-white whitespace-nowrap">
                            <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                            <span>Secret Wallet</span>
                        </a>
                    </li>
                </ul>
            </nav>

            <div class="mt-auto flex-shrink-0 px-6 pb-6">
                <a href="/secret-logout" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors bg-red-500/20 text-red-400 hover:bg-red-500 hover:text-white border border-red-500/30 whitespace-nowrap">
                    <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path></svg>
                    <span>Logout</span>
                </a>
            </div>
        </aside>

        <div class="min-h-screen">

            <div class="fixed top-0 left-0 w-full p-4 md:p-6 flex justify-center z-30">
                <nav id="navbar" class="w-full max-w-6xl bg-slate-900/80 backdrop-blur-md rounded-full shadow-xl border border-white/10 flex items-center justify-between px-4 py-3 navbar">
                    <div class="flex items-center gap-1 md:gap-3">
                        <button id="sidebarToggle" class="text-gray-400 p-2 transition-colors hover:text-white hover:bg-white/10 rounded-full">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
                        </button>
                        <div class="flex items-center gap-2 px-2">
                            <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
                            <span class="text-lg font-bold text-white tracking-wide">SECRET</span>
                        </div>
                    </div>

                    <div class="flex items-center gap-3">
                        <div class="text-right hidden sm:block">
                            <p class="text-sm font-medium text-white"><%= user ? user.username : 'Pengguna' %></p>
                            <p class="text-xs text-blue-400">Administrator</p>
                        </div>
                        <div class="w-10 h-10 rounded-full bg-gradient-to-tr from-blue-500 to-purple-600 p-[2px]">
                            <div class="w-full h-full rounded-full bg-slate-900 flex items-center justify-center">
                                <span class="font-bold text-white"><%= user ? user.username.charAt(0).toUpperCase() : 'P' %></span>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>

            <main class="relative min-h-screen pt-24 md:pt-28">
                <div class="container mx-auto w-full max-w-6xl px-4">

                    <div class="secret-card rounded-xl overflow-hidden mb-6">
                        <div class="p-4 md:p-6">
                            <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-4 gap-4">
                                <div class="w-full md:w-auto">
                                    <p class="text-slate-400 text-sm md:text-base">Saldo Tersedia</p>
                                    <h2 class="text-2xl md:text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400">Rp <%= balance.toLocaleString('id-ID', { minimumFractionDigits: 2 }) %></h2>
                                </div>
                                <div class="bg-blue-600/20 text-blue-400 p-3 rounded-full border border-blue-500/50 shadow-lg shadow-blue-500/20 w-12 h-12 md:w-auto md:h-auto flex items-center justify-center">
                                    <i class="fas fa-wallet text-xl md:text-2xl"></i>
                                </div>
                            </div>
                            <div class="grid grid-cols-2 gap-2 text-center">
                                <button onclick="openModal('deposit')" class="col-span-1 bg-blue-600 hover:bg-blue-500 p-3 rounded-lg text-white transition-all shadow-lg shadow-blue-600/20 border border-blue-500/50 flex flex-col items-center justify-center">
                                    <i class="fas fa-plus-circle text-lg md:text-xl block mb-1"></i>
                                    <span class="text-xs font-medium">Terima</span>
                                </button>
                                <button onclick="openModal('transfer')" class="col-span-1 bg-purple-600 hover:bg-purple-500 p-3 rounded-lg text-white transition-all shadow-lg shadow-purple-600/20 border border-purple-500/50 flex flex-col items-center justify-center">
                                    <i class="fas fa-exchange-alt text-lg md:text-xl block mb-1"></i>
                                    <span class="text-xs font-medium">Kirim</span>
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                        <div class="secret-card p-4 rounded-xl">
                            <div class="flex items-center">
                                <div class="bg-emerald-500/10 text-emerald-400 p-2 rounded-full mr-3 border border-emerald-500/30 flex-shrink-0">
                                    <i class="fas fa-arrow-down text-sm md:text-base"></i>
                                </div>
                                <div class="min-w-0 flex-1">
                                    <p class="text-slate-400 text-xs md:text-sm truncate">Total Masuk</p>
                                    <p class="font-bold text-emerald-400 text-sm md:text-base truncate">Rp <%= (totals.total_deposit || 0).toLocaleString('id-ID', { minimumFractionDigits: 2 }) %></p>
                                </div>
                            </div>
                        </div>
                        <div class="secret-card p-4 rounded-xl">
                            <div class="flex items-center">
                                <div class="bg-red-500/10 text-red-400 p-2 rounded-full mr-3 border border-red-500/30 flex-shrink-0">
                                    <i class="fas fa-arrow-up text-sm md:text-base"></i>
                                </div>
                                <div class="min-w-0 flex-1">
                                    <p class="text-slate-400 text-xs md:text-sm truncate">Total Keluar</p>
                                    <p class="font-bold text-red-400 text-sm md:text-base truncate">Rp <%= ((totals.total_transfer || 0)).toLocaleString('id-ID', { minimumFractionDigits: 2 }) %></p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="secret-card rounded-xl overflow-hidden">
                        <div class="p-4 border-b border-slate-700 flex flex-col md:flex-row justify-between items-start md:items-center bg-slate-900/50 gap-4">
                            <h2 class="font-bold text-lg text-white">Log Transaksi</h2>
                            <div class="relative w-full md:w-48">
                                <select class="bg-slate-800 border-0 rounded-lg pl-3 pr-8 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 text-white w-full">
                                    <option>Semua Jenis</option>
                                    <option>Terima</option>
                                    <option>Kirim</option>
                                </select>
                                <div class="absolute right-3 top-2.5 pointer-events-none">
                                    <i class="fas fa-chevron-down text-slate-400 text-xs"></i>
                                </div>
                            </div>
                        </div>
                        <div class="divide-y divide-slate-700/50 max-h-96 overflow-y-auto">
                            <% if(transactions.length === 0) { %>
                                <div class="p-8 md:p-10 text-center text-slate-500">
                                    <i class="fas fa-ghost text-3xl md:text-4xl mb-3 opacity-50"></i>
                                    <p class="text-sm md:text-base">Tidak ada operasi rahasia yang ditemukan.</p>
                                </div>
                            <% } else { %>
                                <% transactions.forEach(row => { %>
                                    <div class="p-3 md:p-4 hover:bg-slate-800/50 transition duration-200 group"
                                            id="tx-<%= row.id %>"
                                            data-row='<%- JSON.stringify(row).replace(new RegExp("'", "g"), "&#39;") %>'>

                                        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-3">
                                            <div class="flex items-start sm:items-center w-full sm:w-auto">
                                                <div class="mr-3 mt-1 sm:mt-0 flex-shrink-0">
                                                    <% if(row.type === 'deposit') { %>
                                                        <div class="bg-emerald-500/10 text-emerald-400 p-2 rounded-full border border-emerald-500/20 w-8 h-8 flex items-center justify-center">
                                                            <i class="fas fa-arrow-down text-xs"></i>
                                                        </div>
                                                    <% } else { %>
                                                        <div class="bg-red-500/10 text-red-400 p-2 rounded-full border border-red-500/20 w-8 h-8 flex items-center justify-center">
                                                            <i class="fas fa-arrow-up text-xs"></i>
                                                        </div>
                                                    <% } %>
                                                </div>
                                                <div class="min-w-0 flex-1">
                                                    <p class="font-medium text-white text-sm md:text-base truncate"><%= row.description %></p>
                                                    <p class="text-xs text-slate-500 mt-0.5 font-mono">
                                                        <%
                                                            const date = new Date(row.created_at);
                                                            const options = { day: '2-digit', month: 'short', year: 'numeric', hour: '2-digit', minute: '2-digit', hour12: false };
                                                            const formattedDate = date.toLocaleDateString('id-ID', options).replace(/, /g, ' ');

                                                            let typeLabel;
                                                            if (row.type === 'deposit') typeLabel = 'Terima';
                                                            else if (row.type === 'transfer') typeLabel = 'Kirim';
                                                            else typeLabel = 'Lainnya';
                                                        %>
                                                        <span class="hidden sm:inline"><%= formattedDate %></span>
                                                        <span class="sm:hidden"><%= date.toLocaleDateString('id-ID', { day: '2-digit', month: 'short' }) %> <%= date.getHours().toString().padStart(2, '0') %>:<%= date.getMinutes().toString().padStart(2, '0') %></span>
                                                        <span class="text-xs bg-slate-800 px-1.5 py-0.5 rounded ml-1 border border-slate-700"><%= typeLabel %></span>
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="text-right w-full sm:w-auto flex justify-between sm:block items-center">
                                                <p class="font-bold font-mono tracking-wide text-sm md:text-base <%= row.type === 'deposit' ? 'text-emerald-400' : 'text-red-400' %>">
                                                    <%= (row.type === 'deposit' ? '+' : '-') + ' Rp ' + (parseFloat(row.amount) || 0).toLocaleString('id-ID', { minimumFractionDigits: 2 }) %>
                                                </p>
                                                <div class="flex space-x-3 mt-1 sm:mt-2 justify-end opacity-100 sm:opacity-0 sm:group-hover:opacity-100 transition-opacity duration-200">
                                                    <button onclick='openEditModal(<%= row.id %>)' class="text-blue-400 hover:text-blue-300 text-xs flex items-center gap-1">
                                                        <i class="fas fa-edit"></i> <span class="hidden md:inline">Edit</span>
                                                    </button>
                                                    <form method="POST" action="/secret/bank/delete" onsubmit="return confirm('Hapus catatan ini? Tindakan ini tidak dapat dibatalkan.')" class="inline">
                                                        <input type="hidden" name="id" value="<%= row.id %>">
                                                        <button type="submit" class="text-red-400 hover:text-red-300 text-xs flex items-center gap-1">
                                                            <i class="fas fa-trash"></i> <span class="hidden md:inline">Hapus</span>
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            <% } %>
                        </div>
                    </div>
                </div>

            </main>
        </div>
    </div>

    <div id="transactionModal" class="fixed inset-0 bg-black/80 flex items-center justify-center p-4 z-50 hidden backdrop-blur-md">
        <div class="modal-content rounded-xl w-full max-w-md border border-slate-600 shadow-2xl mx-4 max-h-[90vh] overflow-y-auto">
            <div class="p-4 border-b border-slate-700 flex justify-between items-center bg-slate-900/50 sticky top-0">
                <h3 class="font-bold text-lg text-white" id="modalTitle">Operasi Baru</h3>
                <button onclick="closeModal()" class="text-slate-400 hover:text-white transition-colors">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <form method="POST" id="transactionForm" action="/secret/bank/add">
                <input type="hidden" name="id" id="editId">
                <div class="p-4 md:p-5 space-y-4">
                    <div>
                        <label class="block text-slate-400 text-xs uppercase font-bold tracking-wider mb-1">Jenis Operasi</label>
                        <select name="type" id="transactionType" class="w-full p-3 rounded-lg bg-slate-900/50 border border-slate-700 text-white focus:border-blue-500 transition-colors text-sm md:text-base">
                            <option value="deposit">Terima Dana (Masuk)</option>
                            <option value="transfer">Kirim Dana (Keluar)</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-slate-400 text-xs uppercase font-bold tracking-wider mb-1">Jumlah</label>
                        <div class="relative">
                            <span class="absolute left-3 top-3 text-slate-500">Rp</span>
                            <input type="number" step="0.01" name="amount" id="amount" required class="w-full p-3 pl-10 rounded-lg bg-slate-900/50 border border-slate-700 text-white focus:border-blue-500 transition-colors font-mono text-sm md:text-base">
                        </div>
                    </div>
                    <div id="recipientField" class="hidden">
                         <input type="hidden" name="recipient" id="recipient">
                    </div>
                    <div>
                        <label class="block text-slate-400 text-xs uppercase font-bold tracking-wider mb-1">Deskripsi</label>
                        <input type="text" name="description" id="description" required class="w-full p-3 rounded-lg bg-slate-900/50 border border-slate-700 text-white focus:border-blue-500 transition-colors text-sm md:text-base" placeholder="Detail operasi...">
                    </div>
                </div>
                <div class="p-4 border-t border-slate-700 flex justify-end space-x-3 bg-slate-900/30 sticky bottom-0">
                    <button type="button" onclick="closeModal()" class="px-4 py-2 rounded-lg text-slate-300 hover:text-white hover:bg-slate-800 transition-colors text-sm">Batal</button>
                    <button type="submit" class="px-6 py-2 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white font-bold rounded-lg shadow-lg shadow-blue-600/20 transition-all text-sm">Send</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const toggleButton = document.getElementById('sidebarToggle');
            const sidebar = document.getElementById('sidebar');
            const backdrop = document.getElementById('sidebarBackdrop');
            const closeButton = document.getElementById('sidebarCloseButton');
            const navbar = document.getElementById('navbar');

            let sidebarOpen = false;

            function openSidebar() {
                sidebar.classList.remove('-translate-x-full');
                if (window.innerWidth < 1024) {
                    backdrop.classList.remove('hidden');
                    setTimeout(() => backdrop.classList.remove('opacity-0'), 10);
                    document.body.style.overflow = 'hidden';
                }
                sidebarOpen = true;
            }

            function closeSidebar() {
                sidebar.classList.add('-translate-x-full');
                if (window.innerWidth < 1024) {
                    backdrop.classList.add('opacity-0');
                    setTimeout(() => backdrop.classList.add('hidden'), 300);
                    document.body.style.overflow = '';
                }
                sidebarOpen = false;
            }

            function toggleSidebar() {
                if (sidebarOpen) {
                    closeSidebar();
                } else {
                    openSidebar();
                }
            }

            if (toggleButton) toggleButton.addEventListener('click', toggleSidebar);

            if (closeButton) {
                closeButton.addEventListener('click', closeSidebar);
            }

            if (backdrop) {
                backdrop.addEventListener('click', closeSidebar);
            }

            window.addEventListener('scroll', () => {
                if (window.scrollY > 10) {
                    navbar.classList.add('navbar-scrolled');
                } else {
                    navbar.classList.remove('navbar-scrolled');
                }
            });

            window.addEventListener('resize', () => {
                if (window.innerWidth >= 1024) {
                    backdrop.classList.add('hidden');
                    backdrop.classList.add('opacity-0');
                    document.body.style.overflow = '';

                    if (sidebarOpen) {
                        closeSidebar();
                    }
                } else {
                    if (sidebarOpen) {
                        sidebar.classList.add('-translate-x-full');
                        backdrop.classList.add('hidden');
                        backdrop.classList.add('opacity-0');
                        document.body.style.overflow = '';
                        sidebarOpen = false;
                    }
                }
            });

            document.querySelectorAll('nav a').forEach(link => {
                link.addEventListener('click', () => {
                    if (window.innerWidth < 1024) {
                        closeSidebar();
                    }
                });
            });

            if (window.innerWidth >= 1024) {
                closeSidebar();
            }
        });

        const transactionModal = document.getElementById('transactionModal');
        const transactionForm = document.getElementById('transactionForm');
        const modalTitle = document.getElementById('modalTitle');
        const transactionType = document.getElementById('transactionType');
        const recipientField = document.getElementById('recipientField');
        const editIdInput = document.getElementById('editId');

        function updateModalText(type) {
            if (type === 'deposit') {
                modalTitle.textContent = 'Terima Dana (Masuk)';
            } else if (type === 'transfer') {
                modalTitle.textContent = 'Kirim Dana';
            } else {
                modalTitle.textContent = 'Operasi Baru';
            }
        }

        function openModal(type, data = null) {
            if (!transactionModal || !transactionForm) return;

            transactionForm.reset();
            editIdInput.value = '';

            transactionForm.action = data ? '/secret/bank/edit' : '/secret/bank/add';

            if (data) {
                modalTitle.textContent = 'Edit Operasi';
                editIdInput.value = data.id;
                
                let actualType = data.type;
                if (['reward', 'withdraw', 'payment'].includes(actualType)) {
                    actualType = (data.amount > 0) ? 'deposit' : 'transfer';
                }
                
                transactionType.value = actualType;
                document.getElementById('amount').value = data.amount;
                document.getElementById('description').value = data.description;
                
                document.getElementById('recipient').value = ''; 
                
            } else {
                transactionType.value = type;
                updateModalText(type);
            }
            
            transactionModal.classList.remove('hidden');
        }

        function openEditModal(transactionId) {
            try {
                const rowElement = document.getElementById('tx-' + transactionId);
                if (!rowElement) return;
                const dataRow = rowElement.getAttribute('data-row');
                if (!dataRow) return;
                const cleanDataRow = dataRow.replace(/&#39;/g, "'");
                const data = JSON.parse(cleanDataRow);
                openModal('edit', data);
            } catch (error) {
                console.error("Error saat membuka modal edit:", error);
            }
        }

        function closeModal() {
            if (transactionModal) {
                transactionModal.classList.add('hidden');
            }
        }

        if (transactionType) {
            transactionType.addEventListener('change', function() {
                const selectedType = this.value;
                updateModalText(selectedType);
            });
        }
    </script>
