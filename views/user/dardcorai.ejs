<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dardcor AI</title>
    <link rel="icon" href="/logo.png">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.7.0/styles/atom-one-dark.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.7.0/highlight.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
    <style>
        .scrollbar-hide::-webkit-scrollbar { display: none; }
        .scrollbar-hide { -ms-overflow-style: none; scrollbar-width: none; }
        pre { margin: 0; padding: 0; background: transparent; }
        .code-block-wrapper { position: relative; margin: 0.5em 0; border-radius: 0.375rem; overflow: hidden; border: 1px solid #374151; }
        .code-header { display: flex; justify-content: space-between; align-items: center; background-color: #1f2937; padding: 0.25rem 0.75rem; color: #9ca3af; font-size: 0.75rem; border-bottom: 1px solid #374151; }
        .code-content { padding: 0.75rem; background-color: #111827; overflow-x: auto; color: #e5e7eb; font-family: 'Courier New', Courier, monospace; font-size: 0.875rem; }
        .btn-action { display: flex; gap: 0.5rem; }
        .btn-code { cursor: pointer; padding: 0.125rem 0.375rem; border-radius: 0.25rem; transition: background-color 0.2s; }
        .btn-code:hover { background-color: #374151; color: #ffffff; }
        .markdown-body ul { list-style-type: disc; margin-left: 1.25em; }
        .markdown-body ol { list-style-type: decimal; margin-left: 1.25em; }
        .markdown-body p { margin-bottom: 0.5em; }
        .markdown-body h1, .markdown-body h2, .markdown-body h3 { font-weight: bold; margin-top: 0.75em; margin-bottom: 0.25em; }
        #sidebar { transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1); }
    </style>
</head>
<body class="bg-[#0f111a] text-white font-sans h-screen flex overflow-hidden">

    <div id="mobile-overlay" onclick="toggleSidebar()" class="fixed inset-0 bg-black/60 z-40 hidden md:hidden backdrop-blur-sm"></div>

    <aside id="sidebar" class="fixed inset-y-0 left-0 z-50 w-72 bg-[#1a1c29] border-r border-gray-800 flex flex-col transform -translate-x-full md:translate-x-0 md:relative md:w-72 whitespace-nowrap overflow-hidden">
        <div class="p-4 flex items-center justify-between border-b border-gray-800 h-14 shrink-0">
            <span class="font-bold text-lg tracking-wider text-blue-500">Dardcor<span class="text-white">AI</span></span>
            <div class="flex items-center gap-2">
                <button onclick="createNewChat()" class="text-gray-400 hover:text-white p-1.5 rounded-full hover:bg-gray-800 transition"><i class="fas fa-plus"></i></button>
                <button onclick="toggleSidebar()" class="md:hidden text-gray-400 hover:text-white p-1.5"><i class="fas fa-times"></i></button>
            </div>
        </div>
        
        <div class="flex-1 overflow-y-auto p-2 space-y-1.5 scrollbar-hide">
            <% fullHistory.forEach(chat => { %>
                <div class="group relative flex items-center p-2.5 rounded-lg hover:bg-gray-800 cursor-pointer transition <%= chat.conversation_id === activeConversationId ? 'bg-gray-800 border-l-2 border-blue-500' : '' %>" onclick="window.location.href='/user/dardcor-ai/<%= chat.conversation_id %>'">
                    <i class="fas fa-message text-gray-500 mr-3 text-xs"></i>
                    <span class="text-sm truncate flex-1 text-gray-300"><%= chat.message ? chat.message.substring(0, 25) : 'New Chat' %>...</span>
                    <button onclick="deleteChat(event, '<%= chat.conversation_id %>')" class="absolute right-2 opacity-0 group-hover:opacity-100 text-red-400 hover:text-red-500 transition p-1"><i class="fas fa-trash text-xs"></i></button>
                </div>
            <% }) %>
        </div>

        <div class="p-3 border-t border-gray-800 bg-[#151722] shrink-0">
            <a href="/user/home" class="flex items-center text-gray-400 hover:text-white transition">
                <img src="https://ui-avatars.com/api/?name=<%= user.username %>&background=random" class="w-8 h-8 rounded-full mr-3 border border-gray-700">
                <div class="flex flex-col overflow-hidden">
                    <span class="text-sm font-medium text-gray-200 truncate"><%= user.username %></span>
                    <span class="text-[10px] text-gray-500">Back to Dashboard</span>
                </div>
            </a>
        </div>
    </aside>

    <main class="flex-1 flex flex-col relative w-full h-full min-w-0">
        <header class="h-14 flex items-center justify-between px-4 border-b border-gray-800 bg-[#0f111a] z-10 shrink-0">
            <div class="flex items-center gap-3">
                <button onclick="toggleSidebar()" class="text-gray-400 p-2 rounded hover:bg-gray-800 transition"><i class="fas fa-bars"></i></button>
                <h2 class="text-base font-semibold text-gray-200 flex items-center gap-2">
                    <span class="text-blue-500"><i class="fas fa-bolt"></i></span>
                    <span class="hidden sm:inline">Dardcor Model 2.0 Flash</span>
                    <span class="sm:hidden">Dardcor 2.0</span>
                </h2>
            </div>
        </header>

        <div id="chat-container" class="flex-1 overflow-y-auto p-3 md:p-5 space-y-4 scrollbar-hide w-full max-w-4xl mx-auto pb-48">
            <% if (chatHistory.length === 0) { %>
                <div class="h-full flex flex-col items-center justify-center text-gray-500 opacity-60">
                    <div class="w-16 h-16 bg-gray-800 rounded-full flex items-center justify-center mb-4 animate-pulse">
                        <i class="fas fa-robot text-3xl text-blue-500"></i>
                    </div>
                    <p class="text-base font-medium text-gray-400">Apa yang bisa saya bantu?</p>
                </div>
            <% } else { %>
                <% chatHistory.forEach(msg => { %>
                    <div class="flex w-full <%= msg.role === 'user' ? 'justify-end' : 'justify-start' %>">
                        <div class="flex flex-col <%= msg.role === 'user' ? 'items-end' : 'items-start' %> max-w-[90%] md:max-w-[85%] lg:max-w-[80%]">
                            <div class="flex items-center gap-2 mb-1 px-1">
                                <span class="text-[10px] uppercase tracking-wide text-gray-500 font-bold"><%= msg.role === 'user' ? 'You' : 'AI' %></span>
                            </div>
                            <div class="rounded-xl p-3 shadow-md text-sm leading-relaxed overflow-hidden w-full <%= msg.role === 'user' ? 'bg-blue-600 text-white rounded-br-none' : 'bg-[#1a1c29] text-gray-200 rounded-bl-none border border-gray-800' %>">
                                <div class="markdown-body" data-role="<%= msg.role %>"><%= msg.message %></div>
                                <% if (msg.file_metadata) { %>
                                    <div class="mt-2 text-xs flex items-center gap-2 bg-black/20 p-1.5 rounded border border-white/10">
                                        <div class="w-6 h-6 bg-white/10 rounded flex items-center justify-center">
                                            <i class="fas fa-file text-xs"></i>
                                        </div>
                                        <div class="flex flex-col overflow-hidden min-w-0">
                                            <span class="truncate font-medium"><%= msg.file_metadata.filename %></span>
                                            <span class="opacity-70 text-[10px]"><%= Math.round(msg.file_metadata.size / 1024) %> KB</span>
                                        </div>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } %>

            <div id="loading-indicator" class="hidden flex w-full justify-start">
                <div class="flex flex-col items-start max-w-[90%]">
                    <div class="flex items-center gap-2 mb-1 px-1">
                        <span class="text-[10px] uppercase tracking-wide text-gray-500 font-bold">AI</span>
                    </div>
                    <div class="bg-[#1a1c29] px-4 py-3 rounded-xl rounded-bl-none border border-gray-800 flex items-center gap-2 shadow-md">
                        <div class="flex space-x-1">
                            <div class="w-1.5 h-1.5 bg-blue-500 rounded-full animate-bounce"></div>
                            <div class="w-1.5 h-1.5 bg-blue-500 rounded-full animate-bounce" style="animation-delay: 0.15s"></div>
                            <div class="w-1.5 h-1.5 bg-blue-500 rounded-full animate-bounce" style="animation-delay: 0.3s"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="absolute bottom-0 w-full bg-[#0f111a] border-t border-gray-800 px-3 py-3 md:px-5 md:py-4 z-20">
            <form id="chat-form" class="max-w-4xl mx-auto relative bg-[#1a1c29] border border-gray-700 rounded-xl flex items-end shadow-2xl p-1.5 transition focus-within:border-blue-500 focus-within:ring-1 focus-within:ring-blue-500/50">
                <label for="file-upload" class="p-2.5 text-gray-400 hover:text-white cursor-pointer transition rounded-lg hover:bg-gray-800 mb-0.5 shrink-0">
                    <i class="fas fa-paperclip text-base"></i>
                    <input type="file" id="file-upload" name="file_attachment" class="hidden">
                </label>
                
                <div class="flex-1 flex flex-col justify-center min-h-[40px] px-2 py-1">
                    <div id="file-preview" class="hidden flex items-center gap-2 text-xs text-blue-300 bg-blue-500/10 rounded px-2 py-1 mb-1 border border-blue-500/20 w-fit max-w-full">
                        <i class="fas fa-file-alt"></i> 
                        <span id="file-name-text" class="truncate max-w-[150px]"></span>
                        <button type="button" onclick="clearFile()" class="hover:text-red-400 ml-1 shrink-0"><i class="fas fa-times"></i></button>
                    </div>
                    <textarea id="message-input" name="message" rows="1" class="w-full bg-transparent border-none outline-none text-white resize-none max-h-32 placeholder-gray-500 text-sm scrollbar-hide" placeholder="Kirim pesan..."></textarea>
                </div>

                <button type="submit" id="send-btn" class="p-2.5 text-blue-500 hover:text-white hover:bg-blue-600 transition rounded-lg mb-0.5 disabled:opacity-50 disabled:cursor-not-allowed shrink-0">
                    <i class="fas fa-paper-plane text-base"></i>
                </button>
            </form>
            <p class="text-center text-[10px] text-gray-600 mt-2">AI dapat membuat kesalahan. Cek info penting.</p>
        </div>
    </main>

    <script>
        const chatContainer = document.getElementById('chat-container');
        const form = document.getElementById('chat-form');
        const messageInput = document.getElementById('message-input');
        const fileInput = document.getElementById('file-upload');
        const filePreview = document.getElementById('file-preview');
        const fileNameText = document.getElementById('file-name-text');
        const loadingIndicator = document.getElementById('loading-indicator');
        const currentConversationId = "<%= activeConversationId %>";
        const sidebar = document.getElementById('sidebar');
        const overlay = document.getElementById('mobile-overlay');

        function toggleSidebar() {
            if (window.innerWidth < 768) {
                sidebar.classList.toggle('-translate-x-full');
                overlay.classList.toggle('hidden');
            } else {
                sidebar.classList.toggle('md:w-0');
                sidebar.classList.toggle('md:w-72');
                sidebar.classList.toggle('md:border-none');
                sidebar.classList.toggle('md:p-0');
            }
        }

        function scrollToBottom() {
            chatContainer.scrollTop = chatContainer.scrollHeight;
        }

        function clearFile() {
            fileInput.value = '';
            filePreview.classList.add('hidden');
        }

        fileInput.addEventListener('change', () => {
            if (fileInput.files.length > 0) {
                fileNameText.textContent = fileInput.files[0].name;
                filePreview.classList.remove('hidden');
            } else {
                filePreview.classList.add('hidden');
            }
        });

        messageInput.addEventListener('input', function() {
            this.style.height = 'auto';
            this.style.height = Math.min(this.scrollHeight, 128) + 'px';
            if(this.value === '') this.style.height = 'auto';
        });

        messageInput.addEventListener('keydown', function(e) {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                form.dispatchEvent(new Event('submit'));
            }
        });

        document.addEventListener("DOMContentLoaded", () => {
            document.querySelectorAll('.markdown-body').forEach(el => {
                if(el.dataset.role === 'bot') {
                    el.innerHTML = parseMarkdown(el.textContent);
                }
            });
            enhanceCodeBlocks();
            scrollToBottom();
        });

        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            const message = messageInput.value.trim();
            const file = fileInput.files[0];

            if (!message && !file) return;

            const sendBtn = document.getElementById('send-btn');
            sendBtn.disabled = true;
            messageInput.disabled = true;

            appendUserMessage(message, file ? file.name : null, file ? file.size : 0);
            
            messageInput.value = '';
            messageInput.style.height = 'auto';
            clearFile();
            
            loadingIndicator.classList.remove('hidden');
            scrollToBottom();

            const formData = new FormData();
            formData.append('message', message);
            formData.append('conversationId', currentConversationId);
            if (file) formData.append('file_attachment', file);

            try {
                const res = await fetch('/user/ai/chat', { method: 'POST', body: formData });
                const data = await res.json();
                
                loadingIndicator.classList.add('hidden');
                sendBtn.disabled = false;
                messageInput.disabled = false;
                messageInput.focus();

                if (data.success) {
                    appendBotMessage(data.response);
                } else {
                    appendErrorMessage(data.response || "Terjadi kesalahan.");
                }
            } catch (err) {
                loadingIndicator.classList.add('hidden');
                sendBtn.disabled = false;
                messageInput.disabled = false;
                appendErrorMessage("Gagal terhubung ke server.");
            }
        });

        function appendUserMessage(text, fileName, fileSize) {
            const div = document.createElement('div');
            div.className = "flex w-full justify-end";
            
            let fileHTML = '';
            if(fileName) {
                const sizeKB = Math.round(fileSize / 1024);
                fileHTML = `
                <div class="mt-2 text-xs flex items-center gap-2 bg-black/20 p-1.5 rounded border border-white/10">
                    <div class="w-6 h-6 bg-white/10 rounded flex items-center justify-center"><i class="fas fa-file text-xs"></i></div>
                    <div class="flex flex-col overflow-hidden min-w-0">
                        <span class="truncate font-medium">${fileName}</span>
                        <span class="opacity-70 text-[10px]">${sizeKB} KB</span>
                    </div>
                </div>`;
            }

            const content = `
            <div class="flex flex-col items-end max-w-[90%] md:max-w-[85%] lg:max-w-[80%]">
                <div class="flex items-center gap-2 mb-1 px-1"><span class="text-[10px] uppercase tracking-wide text-gray-500 font-bold">You</span></div>
                <div class="rounded-xl p-3 shadow-md text-sm leading-relaxed bg-blue-600 text-white rounded-br-none w-full">
                    <div class="whitespace-pre-wrap">${text.replace(/</g, "&lt;").replace(/>/g, "&gt;")}</div>
                    ${fileHTML}
                </div>
            </div>`;
            
            div.innerHTML = content;
            chatContainer.insertBefore(div, loadingIndicator);
            scrollToBottom();
        }

        function appendBotMessage(rawText) {
            const div = document.createElement('div');
            div.className = "flex w-full justify-start";
            div.innerHTML = `
                <div class="flex flex-col items-start max-w-[90%] md:max-w-[85%] lg:max-w-[80%]">
                    <div class="flex items-center gap-2 mb-1 px-1"><span class="text-[10px] uppercase tracking-wide text-gray-500 font-bold">AI</span></div>
                    <div class="rounded-xl p-3 shadow-md text-sm leading-relaxed bg-[#1a1c29] text-gray-200 rounded-bl-none border border-gray-800 w-full">
                        <div class="markdown-body">${parseMarkdown(rawText)}</div>
                    </div>
                </div>`;
            chatContainer.insertBefore(div, loadingIndicator);
            enhanceCodeBlocks();
            scrollToBottom();
        }

        function appendErrorMessage(text) {
            const div = document.createElement('div');
            div.className = "flex w-full justify-center my-4";
            div.innerHTML = `<div class="bg-red-500/10 text-red-400 px-3 py-1.5 rounded-lg text-xs border border-red-500/20"><i class="fas fa-exclamation-circle mr-2"></i>${text}</div>`;
            chatContainer.insertBefore(div, loadingIndicator);
            scrollToBottom();
        }

        function parseMarkdown(text) {
            return marked.parse(text);
        }

        function enhanceCodeBlocks() {
            document.querySelectorAll('pre code').forEach((block) => {
                if (block.closest('.code-block-wrapper')) return;

                hljs.highlightElement(block);

                const pre = block.parentElement;
                const wrapper = document.createElement('div');
                wrapper.className = 'code-block-wrapper';
                
                const header = document.createElement('div');
                header.className = 'code-header';
                
                const lang = block.className.replace('language-', '') || 'code';
                const langSpan = document.createElement('span');
                langSpan.textContent = lang.toUpperCase();
                langSpan.className = "font-bold text-[10px] tracking-wider";

                const actions = document.createElement('div');
                actions.className = 'btn-action';

                const previewBtn = document.createElement('div');
                previewBtn.className = 'btn-code text-[10px] flex items-center gap-1';
                previewBtn.innerHTML = '<i class="fas fa-eye"></i> Preview';
                previewBtn.onclick = () => previewCode(block.innerText);

                const copyBtn = document.createElement('div');
                copyBtn.className = 'btn-code text-[10px] flex items-center gap-1';
                copyBtn.innerHTML = '<i class="fas fa-copy"></i> Copy';
                copyBtn.onclick = () => copyToClipboard(block.innerText, copyBtn);

                actions.appendChild(previewBtn);
                actions.appendChild(copyBtn);
                header.appendChild(langSpan);
                header.appendChild(actions);

                pre.parentNode.insertBefore(wrapper, pre);
                wrapper.appendChild(header);
                const contentDiv = document.createElement('div');
                contentDiv.className = 'code-content';
                contentDiv.appendChild(pre); 
                wrapper.appendChild(contentDiv);
            });
        }

        async function previewCode(code) {
            try {
                const res = await fetch('/user/ai/store-preview', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ code })
                });
                const data = await res.json();
                if(data.success) {
                    window.open(`/user/dardcor-ai/preview/${data.previewId}`, '_blank');
                } else {
                    alert('Gagal membuat preview.');
                }
            } catch (e) { alert('Error preview.'); }
        }

        function copyToClipboard(text, btn) {
            navigator.clipboard.writeText(text).then(() => {
                const original = btn.innerHTML;
                btn.innerHTML = '<i class="fas fa-check"></i> Copied';
                btn.classList.add('text-green-400');
                setTimeout(() => {
                    btn.innerHTML = original;
                    btn.classList.remove('text-green-400');
                }, 2000);
            });
        }

        async function createNewChat() {
            const res = await fetch('/user/ai/new-chat', { method: 'POST' });
            const data = await res.json();
            if(data.success) window.location.href = data.redirectUrl;
        }

        async function deleteChat(e, id) {
            e.stopPropagation();
            if(!confirm('Hapus chat ini?')) return;
            const res = await fetch('/user/ai/delete-chat-history', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ conversationId: id })
            });
            const data = await res.json();
            if(data.success) window.location.reload();
        }
    </script>
</body>
</html>