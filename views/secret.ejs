<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="theme-color" content="#020617">
    <link rel="manifest" href="/manifest.json">

    <title>Dardcor</title>
    <link rel="icon" href="/logo.png">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body { 
            font-family: 'Poppins', sans-serif; 
            overflow: hidden; 
            background-color: #020617; 
        }
        .login-container {
            background: rgba(15, 23, 42, 0.7);
            backdrop-filter: blur(16px);
            border: 1px solid rgba(56, 189, 248, 0.15);
            box-shadow: 0 0 60px rgba(56, 189, 248, 0.08);
            animation: fadeIn 0.8s ease-out;
            position: relative;
            overflow: hidden;
        }
        input {
            background-color: rgba(2, 6, 23, 0.6) !important;
            border: 1px solid #1e293b !important;
            color: #e2e8f0 !important; 
            letter-spacing: 0.05em;
            transition: all 0.3s;
        }
        input:focus { 
            border-color: #38bdf8 !important;
            box-shadow: 0 0 15px rgba(56, 189, 248, 0.2) !important; 
            outline: none !important; 
            background-color: rgba(2, 6, 23, 0.8) !important;
        }
        .glow-text { text-shadow: 0 0 20px rgba(56, 189, 248, 0.6); }
        
        /* Animasi Login Sukses */
        .scan-line {
            position: absolute;
            width: 100%;
            height: 2px;
            background: #38bdf8;
            box-shadow: 0 0 10px #38bdf8;
            top: 0;
            left: 0;
            animation: scan 1.5s linear infinite;
            opacity: 0;
        }
        @keyframes scan {
            0% { top: 0%; opacity: 0; }
            10% { opacity: 1; }
            90% { opacity: 1; }
            100% { top: 100%; opacity: 0; }
        }
        .glitch-overlay {
            position: absolute;
            top: 0; left: 0; width: 100%; height: 100%;
            background: rgba(2, 6, 23, 0.95);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            z-index: 50;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.3s;
        }
        .loader-ring {
            width: 60px;
            height: 60px;
            border: 4px solid rgba(56, 189, 248, 0.3);
            border-top: 4px solid #38bdf8;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin-bottom: 20px;
        }
        @keyframes spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }
        @keyframes fadeIn { from { opacity: 0; transform: scale(0.95); } to { opacity: 1; transform: scale(1); } }
    </style>
</head>
<body class="flex items-center justify-center min-h-screen p-4 relative">
    
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-[-10%] left-[-10%] w-1/2 h-1/2 bg-blue-900/10 rounded-full blur-[120px]"></div>
        <div class="absolute bottom-[-10%] right-[-10%] w-1/2 h-1/2 bg-cyan-900/10 rounded-full blur-[120px]"></div>
    </div>

    <main class="w-full max-w-md z-10">
        <div class="login-container p-8 md:p-10 rounded-2xl" id="loginCard">
            
            <div id="successOverlay" class="glitch-overlay rounded-2xl">
                <div class="scan-line"></div>
                <div class="loader-ring"></div>
                <h2 class="text-2xl font-bold text-sky-400 tracking-[0.2em] glow-text animate-pulse">ACCESS GRANTED</h2>
                <p class="text-slate-500 text-xs mt-2 font-mono">Decrypting Dashboard...</p>
            </div>

            <div class="text-center mb-8">
                <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-slate-900 border border-slate-800 mb-4 shadow-lg relative group">
                    <div class="absolute inset-0 bg-sky-500/20 rounded-full blur opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                    <svg class="w-8 h-8 text-sky-500 relative z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path></svg>
                </div>
                <h1 class="text-2xl font-bold text-white tracking-widest uppercase glow-text">Secret Login</h1>
                <p class="text-slate-500 text-xs mt-2 tracking-wider font-mono">Dardcor Society</p>
            </div>

            <form id="loginForm" class="space-y-6">
                <div>
                    <label class="block text-xs font-semibold text-sky-500 uppercase tracking-wider mb-2 ml-1">Secret ID</label>
                    <div class="relative group">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-user-secret text-slate-600 group-focus-within:text-sky-500 transition-colors"></i>
                        </div>
                        <input type="text" name="username" class="w-full py-3 pl-10 pr-4 rounded-lg focus:outline-none placeholder-slate-700" placeholder="Identify Yourself" required autocomplete="off">
                    </div>
                </div>
                
                <div>
                    <label class="block text-xs font-semibold text-sky-500 uppercase tracking-wider mb-2 ml-1">Passcode</label>
                    <div class="relative group">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-key text-slate-600 group-focus-within:text-sky-500 transition-colors"></i>
                        </div>
                        <input type="password" id="secretPassword" name="password" class="w-full py-3 pl-10 pr-10 rounded-lg focus:outline-none placeholder-slate-700" placeholder="••••••••••••" required>
                        <button type="button" id="toggleSecretPassword" class="absolute inset-y-0 right-0 pr-3 flex items-center text-slate-600 hover:text-sky-400 transition-colors focus:outline-none">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                </div>

                <div id="errorMessage" class="hidden p-3 bg-red-500/10 border border-red-500/30 rounded text-red-400 text-xs text-center tracking-wide font-mono"></div>
                
                <button type="submit" id="submitBtn" class="w-full bg-sky-600 hover:bg-sky-500 text-white font-bold py-3 px-4 rounded-lg transition-all duration-300 shadow-[0_0_20px_rgba(14,165,233,0.2)] hover:shadow-[0_0_35px_rgba(14,165,233,0.4)] uppercase tracking-widest text-sm flex items-center justify-center gap-2 group">
                    <span>Authenticate</span>
                </button>
            </form>
            
            <div class="text-center mt-8 border-t border-slate-800 pt-6">
                <a href="/" class="text-xs text-slate-600 hover:text-slate-400 transition-colors uppercase tracking-wide font-mono group flex items-center justify-center gap-2">
                    Back To Home
                </a>
            </div>
        </div>
    </main>

    <script>
        // Toggle Password Visibility
        const toggleBtn = document.getElementById('toggleSecretPassword');
        const passwordInput = document.getElementById('secretPassword');
        const icon = toggleBtn.querySelector('i');

        toggleBtn.addEventListener('click', () => {
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
                icon.classList.add('text-sky-400');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
                icon.classList.remove('text-sky-400');
            }
        });

        // Handle Login Submit with Animation
        document.getElementById('loginForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const submitBtn = document.getElementById('submitBtn');
            const btnText = submitBtn.querySelector('span');
            const errorMessage = document.getElementById('errorMessage');
            const successOverlay = document.getElementById('successOverlay');
            
            // UI Loading State
            submitBtn.disabled = true;
            btnText.textContent = 'Verifying...';
            submitBtn.classList.add('opacity-80', 'cursor-wait');
            errorMessage.classList.add('hidden');

            const formData = new URLSearchParams(new FormData(this));

            try {
                // Melakukan request ke server
                const response = await fetch('/secret-login', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: formData
                });

                // Cek apakah response diarahkan ke halaman secret home
                if (response.url.includes('/secret/home')) {
                    // SUKSES LOGIN
                    successOverlay.classList.remove('hidden');
                    successOverlay.style.opacity = '1';
                    successOverlay.style.pointerEvents = 'auto';
                    
                    setTimeout(() => {
                        window.location.href = '/secret/home';
                    }, 2200); // Tunggu animasi selesai
                } else {
                    // GAGAL LOGIN
                    throw new Error('Access Denied: Invalid Credentials');
                }

            } catch (error) {
                errorMessage.textContent = "⚠️ " + error.message;
                errorMessage.classList.remove('hidden');
                
                // Shake animation for error
                const card = document.getElementById('loginCard');
                card.animate([
                    { transform: 'translateX(0)' },
                    { transform: 'translateX(-5px)' },
                    { transform: 'translateX(5px)' },
                    { transform: 'translateX(0)' }
                ], { duration: 300 });

                submitBtn.disabled = false;
                btnText.textContent = 'Authenticate';
                submitBtn.classList.remove('opacity-80', 'cursor-wait');
                passwordInput.value = ''; // Clear password
                passwordInput.focus();
            }
        });
    </script>
</body>
</html>