<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>Dardcor</title>
    <link rel="icon" href="/logo.png">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    
    <style>
        html { scroll-behavior: smooth; }
        body { 
            background-color: #1a1a2e;
            min-height: 100vh; 
            font-family: 'Poppins', sans-serif; 
            overflow-x: hidden; 
            color: #cbd5e1; 
        }
        
        /* Sidebar Styles */
        .sidebar {
            background-color: #16213e;
            box-shadow: 5px 0 15px rgba(0,0,0,0.4);
            z-index: 50;
        }

        /* Navbar Styles */
        .navbar {
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
            z-index: 40;
        }
        .navbar-scrolled {
            background-color: rgba(255, 255, 255, 0.95);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }
        
        /* Container Styles */
        .form-container, .list-container {
            background: linear-gradient(145deg, #1e293b, #0f172a);
            border: 1px solid #334155;
            box-shadow: 0 10px 25px rgba(0,0,0,0.3);
            animation: fadeIn 0.6s ease-out;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Form Inputs */
        input[type="text"], input[type="url"], input[type="file"] {
            background: rgba(15, 23, 42, 0.7);
            border: 1px solid #334155;
            color: white;
        }
        input:focus {
            border-color: #3b82f6;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
            outline: none;
        }
        input[type="file"]::file-selector-button {
            background-color: #3b82f6;
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 0.375rem;
            cursor: pointer;
            transition: background-color 0.2s;
            margin-right: 1rem;
        }
        input[type="file"]::file-selector-button:hover {
            background-color: #2563eb;
        }

        /* Scrollbar Hide */
        .no-scrollbar::-webkit-scrollbar { display: none; }
        .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
        
        /* List Item Hover */
        .ai-list-item {
            transition: all 0.2s;
        }
        .ai-list-item:hover {
            background-color: rgba(30, 41, 59, 0.8);
            border-color: #3b82f6;
        }
    </style>
</head>
<body class="relative">

    <div id="sidebarBackdrop" class="fixed inset-0 bg-black/50 z-40 hidden lg:hidden transition-opacity opacity-0"></div>

    <div class="relative min-h-screen flex">

        <aside id="sidebar" class="sidebar fixed top-0 left-0 h-full w-64 p-0 text-white transform -translate-x-full lg:translate-x-0 transition-transform duration-300 ease-in-out flex flex-col">
            
            <div class="flex items-center gap-4 pb-4 border-b border-white/20 mb-4 flex-shrink-0 px-6 pt-6">
                <button id="sidebarCloseButton" class="lg:hidden p-1 rounded-full text-white/70 hover:bg-white/10 hover:text-white transition-colors">
                     <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                </button>
                <h2 class="text-2xl font-bold whitespace-nowrap">Dashboard</h2>
            </div>
            
            <nav class="flex-grow px-6 overflow-y-auto no-scrollbar"> 
                <ul class="space-y-3">
                    <li>
                        <a href="/admin/home" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors hover:bg-blue-600 text-gray-300 hover:text-white whitespace-nowrap">
                            <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6-4a1 1 0 001-1v-1a1 1 0 10-2 0v1a1 1 0 001 1z"></path></svg>
                            <span>Home</span>
                        </a>
                    </li>
                    
                    <li>
                        <a href="/admin/upload-ai" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors bg-blue-600 text-white whitespace-nowrap">
                            <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M12 5V3m0 18v-2M7.05 7.05l-1.414-1.414M18.364 18.364l-1.414-1.414M7.05 18.364l-1.414 1.414M18.364 7.05l-1.414 1.414M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                            <span>Upload AI</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/upload-jadwal" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors hover:bg-blue-600 text-gray-300 hover:text-white whitespace-nowrap">
                            <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                            <span>Upload Jadwal</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/upload-tugas" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors hover:bg-blue-600 text-gray-300 hover:text-white whitespace-nowrap">
                            <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path></svg>
                            <span>Upload Tugas</span>
                        </a>
                    </li>
                </ul>
            </nav>

            <div class="mt-auto flex-shrink-0 px-6 pb-6"> 
                <a href="/logout" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors bg-red-600/20 text-red-300 hover:bg-red-600 hover:text-white whitespace-nowrap">
                    <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15M12 9l-3 3m0 0l3 3m-3-3h12.75"></path></svg>
                    <span>Logout</span>
                </a>
            </div>
        </aside>

        <div class="flex-1 min-w-0 flex flex-col min-h-screen lg:ml-64 transition-all duration-300">
            
            <div class="sticky top-0 z-30 p-4 md:p-6">
                <nav id="navbar" class="w-full max-w-6xl mx-auto bg-white/90 backdrop-blur-sm rounded-full shadow-lg border border-gray-200/50 flex items-center justify-between px-4 py-3 navbar">
                    <div class="flex items-center gap-1 md:gap-3">
                        <button id="sidebarToggle" class="lg:hidden text-gray-700 p-2 transition-colors hover:bg-gray-100 rounded-full">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
                        </button>
                        <a href="/" class="flex items-center gap-2">
                            <span class="text-xl font-bold text-gray-800">Dardcor</span>
                        </a>
                    </div>
                    
                    <div class="flex items-center gap-3">
                        <span class="hidden md:block text-sm font-medium text-gray-600">Admin</span>
                        <a href="/admin" class="w-10 h-10 rounded-full flex items-center justify-center bg-gray-100 hover:bg-gray-200 transition-colors" aria-label="Admin Login">
                            <img src="/logo.png" alt="Logo Admin" class="w-full h-full object-contain p-1 rounded-full">
                        </a>
                    </div>
                </nav>
            </div>

            <main class="flex-1 p-4 pt-4 w-full max-w-6xl mx-auto flex flex-col lg:flex-row gap-8 items-start">
                
                <div class="form-container text-white p-8 md:p-10 rounded-2xl w-full lg:w-1/2">
                    <h1 class="text-2xl font-bold mb-6 text-center border-b border-slate-700 pb-4">Upload AI Baru</h1>
                    
                    <form action="/admin/upload-ai" method="POST" enctype="multipart/form-data">
                        <div class="mb-5">
                            <label for="name" class="block text-sm font-medium text-gray-300 mb-2">Nama AI</label>
                            <input type="text" id="name" name="name" class="w-full p-3 rounded-lg placeholder-slate-500" placeholder="Contoh: ChatGPT" required>
                        </div>

                        <div class="mb-5">
                            <label for="image_file" class="block text-sm font-medium text-gray-300 mb-2">Upload Logo (File)</label>
                            <input type="file" id="image_file" name="image_file" class="w-full p-2 rounded-lg text-sm text-gray-400 bg-slate-800/50">
                        </div>

                        <div class="mb-5">
                            <label for="image_url_manual" class="block text-sm font-medium text-gray-300 mb-2">ATAU Link Logo (URL)</label>
                            <input type="url" id="image_url_manual" name="image_url_manual" class="w-full p-3 rounded-lg placeholder-slate-500" placeholder="https://example.com/logo.png">
                        </div>
                        
                        <div class="mb-8">
                            <label for="website_link" class="block text-sm font-medium text-gray-300 mb-2">Link Website AI</label>
                            <input type="url" id="website_link" name="website_link" class="w-full p-3 rounded-lg placeholder-slate-500" placeholder="https://chat.openai.com" required>
                        </div>

                        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold p-3 rounded-lg transition-all shadow-lg shadow-blue-600/20 flex items-center justify-center gap-2">
                            <i class="fas fa-cloud-upload-alt"></i> Upload Data
                        </button>
                    </form>
                </div>

                <div class="list-container text-white p-8 md:p-10 rounded-2xl w-full lg:w-1/2">
                    <h2 class="text-2xl font-bold mb-6 text-center border-b border-slate-700 pb-4">Daftar AI Tersimpan</h2>
                    
                    <div class="space-y-3 max-h-[600px] overflow-y-auto pr-2 custom-scroll">
                        <% if (typeof tools !== 'undefined' && tools.length > 0) { %>
                            <% tools.forEach(tool => { %>
                                <div class="ai-list-item flex items-center justify-between p-4 bg-slate-800/50 rounded-xl border border-slate-700 group">
                                    <div class="flex items-center gap-4">
                                        <div class="w-12 h-12 rounded-lg bg-white p-1 flex-shrink-0 overflow-hidden">
                                            <img src="<%= tool.image_url %>" alt="<%= tool.name %>" class="w-full h-full object-contain">
                                        </div>
                                        <div>
                                            <h3 class="font-semibold text-white"><%= tool.name %></h3>
                                            <a href="<%= tool.website_link %>" target="_blank" class="text-xs text-blue-400 hover:underline truncate max-w-[150px] block">Kunjungi Link</a>
                                        </div>
                                    </div>
                                    <form action="/admin/delete-ai" method="POST" onsubmit="return confirm('Hapus <%= tool.name %>? Tindakan ini tidak dapat dibatalkan.')">
                                        <input type="hidden" name="id" value="<%= tool.id %>">
                                        <input type="hidden" name="image_url" value="<%= tool.image_url %>">
                                        <button type="submit" class="p-2 text-slate-500 hover:text-red-500 hover:bg-red-500/10 rounded-lg transition-all" title="Hapus">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <div class="text-center py-10 text-slate-500">
                                <i class="fas fa-box-open text-4xl mb-3 opacity-50"></i>
                                <p>Belum ada data AI yang ditambahkan.</p>
                            </div>
                        <% } %>
                    </div>
                </div>

            </main>
        </div>

    </div> 
    
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const toggleButton = document.getElementById('sidebarToggle');
            const sidebar = document.getElementById('sidebar');
            const backdrop = document.getElementById('sidebarBackdrop');
            const closeButton = document.getElementById('sidebarCloseButton');
            const navbar = document.getElementById('navbar');

            function openSidebar() {
                sidebar.classList.remove('-translate-x-full');
                backdrop.classList.remove('hidden');
                setTimeout(() => backdrop.classList.remove('opacity-0'), 10);
            }

            function closeSidebar() {
                sidebar.classList.add('-translate-x-full');
                backdrop.classList.add('opacity-0');
                setTimeout(() => backdrop.classList.add('hidden'), 300);
            }

            if (toggleButton) toggleButton.addEventListener('click', openSidebar);
            if (closeButton) closeButton.addEventListener('click', closeSidebar);
            if (backdrop) backdrop.addEventListener('click', closeSidebar);

            window.addEventListener('scroll', () => {
                if (window.scrollY > 10) {
                    navbar.classList.add('navbar-scrolled');
                } else {
                    navbar.classList.remove('navbar-scrolled');
                }
            });
        });
    </script>
</body>
</html>