<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>Dardcor</title> 
    <link rel="icon" href="/logo.png">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    
    <style>
        html { scroll-behavior: smooth; }
        body { 
            background-color: #1a1a2e;
            min-height: 100vh; 
            font-family: 'Poppins', sans-serif; 
            overflow-x: hidden; 
            color: #cbd5e1; 
        }
        
        /* Sidebar Styles */
        .sidebar {
            background-color: #16213e;
            box-shadow: 5px 0 15px rgba(0,0,0,0.4);
            z-index: 50;
        }

        /* Navbar Styles */
        .navbar {
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
            z-index: 40;
        }
        .navbar-scrolled {
            background-color: rgba(255, 255, 255, 0.95);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }
        
        /* Card Styles */
        .dashboard-card {
            background: linear-gradient(145deg, #1e293b, #0f172a);
            border: 1px solid #334155;
            transition: all 0.3s;
        }
        .dashboard-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.3);
            border-color: #3b82f6;
        }

        /* Scrollbar Hide */
        .no-scrollbar::-webkit-scrollbar { display: none; }
        .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
    </style>
</head>
<body class="relative">

    <div id="sidebarBackdrop" class="fixed inset-0 bg-black/50 z-40 hidden lg:hidden transition-opacity opacity-0"></div>

    <div class="relative min-h-screen flex">

        <aside id="sidebar" class="sidebar fixed top-0 left-0 h-full w-64 p-0 text-white transform -translate-x-full lg:translate-x-0 transition-transform duration-300 ease-in-out flex flex-col">
            
            <div class="flex items-center gap-4 pb-4 border-b border-white/20 mb-4 flex-shrink-0 px-6 pt-6">
                <button id="sidebarCloseButton" class="lg:hidden p-1 rounded-full text-white/70 hover:bg-white/10 hover:text-white transition-colors">
                     <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                </button>
                <h2 class="text-2xl font-bold whitespace-nowrap">Dashboard</h2>
            </div>
            
            <nav class="flex-grow px-6 overflow-y-auto no-scrollbar"> 
                <ul class="space-y-3">
                    <li>
                        <a href="/admin/home" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors bg-blue-600 text-white whitespace-nowrap">
                            <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6-4a1 1 0 001-1v-1a1 1 0 10-2 0v1a1 1 0 001 1z"></path></svg>
                            <span>Home</span>
                        </a>
                    </li>
                    
                    <li>
                        <a href="/admin/upload-ai" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors hover:bg-blue-600 text-gray-300 hover:text-white whitespace-nowrap">
                            <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M12 5V3m0 18v-2M7.05 7.05l-1.414-1.414M18.364 18.364l-1.414-1.414M7.05 18.364l-1.414 1.414M18.364 7.05l-1.414 1.414M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                            <span>Upload AI</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/upload-jadwal" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors hover:bg-blue-600 text-gray-300 hover:text-white whitespace-nowrap">
                            <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                            <span>Upload Jadwal</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/upload-tugas" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors hover:bg-blue-600 text-gray-300 hover:text-white whitespace-nowrap">
                            <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path></svg>
                            <span>Upload Tugas</span>
                        </a>
                    </li>
                </ul>
            </nav>

            <div class="mt-auto flex-shrink-0 px-6 pb-6"> 
                <a href="/logout" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors bg-red-600/20 text-red-300 hover:bg-red-600 hover:text-white whitespace-nowrap">
                    <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15M12 9l-3 3m0 0l3 3m-3-3h12.75"></path></svg>
                    <span>Logout</span>
                </a>
            </div>
        </aside>

        <div class="flex-1 min-w-0 flex flex-col min-h-screen lg:ml-64 transition-all duration-300">
            
            <div class="sticky top-0 z-30 p-4 md:p-6">
                <nav id="navbar" class="w-full max-w-6xl mx-auto bg-white/90 backdrop-blur-sm rounded-full shadow-lg border border-gray-200/50 flex items-center justify-between px-4 py-3 navbar">
                    <div class="flex items-center gap-1 md:gap-3">
                        <button id="sidebarToggle" class="lg:hidden text-gray-700 p-2 transition-colors hover:bg-gray-100 rounded-full">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
                        </button>
                        <a href="/" class="flex items-center gap-2">
                            <span class="text-xl font-bold text-gray-800">Dardcor</span>
                        </a>
                    </div>
                    
                    <div class="flex items-center gap-3">
                        <span class="hidden md:block text-sm font-medium text-gray-600">Admin</span>
                        <a href="/admin" class="w-10 h-10 rounded-full flex items-center justify-center bg-gray-100 hover:bg-gray-200 transition-colors" aria-label="Admin Login">
                            <img src="/logo.png" alt="Logo Admin" class="w-full h-full object-contain p-1 rounded-full">
                        </a>
                    </div>
                </nav>
            </div>

            <main class="flex-1 p-4 pt-4 w-full max-w-6xl mx-auto">
                
                <div class="mb-8 text-center md:text-left">
                    <h1 class="text-3xl font-bold text-white">Admin Dashboard</h1>
                    <p class="text-slate-400">Selamat datang kembali, Admin.</p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
                    
                    <div class="dashboard-card p-6 rounded-xl">
                        <div class="flex items-center mb-4">
                            <div class="p-3 bg-blue-500/20 rounded-lg text-blue-400 mr-4">
                                <i class="fas fa-rocket text-xl"></i>
                            </div>
                            <h3 class="text-lg font-semibold text-white">Quick Actions</h3>
                        </div>
                        <div class="grid grid-cols-1 gap-2">
                            <a href="/admin/upload-tugas" class="block p-3 bg-slate-800 rounded text-center text-sm text-slate-300 hover:bg-slate-700 hover:text-white transition">
                                <i class="fas fa-tasks mr-2"></i> Upload Tugas
                            </a>
                            <a href="/admin/upload-jadwal" class="block p-3 bg-slate-800 rounded text-center text-sm text-slate-300 hover:bg-slate-700 hover:text-white transition">
                                <i class="fas fa-calendar-alt mr-2"></i> Upload Jadwal
                            </a>
                            <a href="/admin/upload-ai" class="block p-3 bg-slate-800 rounded text-center text-sm text-slate-300 hover:bg-slate-700 hover:text-white transition">
                                <i class="fas fa-robot mr-2"></i> Upload AI Tools
                            </a>
                        </div>
                    </div>

                    <div class="dashboard-card p-6 rounded-xl">
                         <div class="flex items-center mb-4">
                            <div class="p-3 bg-green-500/20 rounded-lg text-green-400 mr-4">
                                <i class="fas fa-server text-xl"></i>
                            </div>
                            <h3 class="text-lg font-semibold text-white">System Status</h3>
                        </div>
                        <div class="space-y-4">
                            <div class="flex justify-between items-center">
                                <span class="text-slate-400">Database</span>
                                <span class="px-2 py-1 rounded text-xs bg-green-500/20 text-green-400 font-medium">Online</span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-slate-400">Web Server</span>
                                <span class="px-2 py-1 rounded text-xs bg-green-500/20 text-green-400 font-medium">Running</span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-slate-400">Last Backup</span>
                                <span class="text-slate-300 text-sm">Today, 04:00</span>
                            </div>
                        </div>
                    </div>

                    <div class="dashboard-card p-6 rounded-xl md:col-span-2 lg:col-span-1">
                        <div class="flex items-center mb-4">
                            <div class="p-3 bg-purple-500/20 rounded-lg text-purple-400 mr-4">
                                <i class="fas fa-chart-line text-xl"></i>
                            </div>
                            <h3 class="text-lg font-semibold text-white">Overview</h3>
                        </div>
                        <div class="text-center py-6">
                            <p class="text-4xl font-bold text-white mb-1">3</p>
                            <p class="text-slate-400 text-sm">Active Modules</p>
                        </div>
                        <div class="w-full bg-slate-700 h-2 rounded-full overflow-hidden mt-2">
                            <div class="bg-purple-500 h-full" style="width: 100%"></div>
                        </div>
                    </div>

                </div>

            </main>
        </div>

    </div> 
    
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const toggleButton = document.getElementById('sidebarToggle');
            const sidebar = document.getElementById('sidebar');
            const backdrop = document.getElementById('sidebarBackdrop');
            const closeButton = document.getElementById('sidebarCloseButton');
            const navbar = document.getElementById('navbar');

            function openSidebar() {
                sidebar.classList.remove('-translate-x-full');
                backdrop.classList.remove('hidden');
                // Sedikit delay untuk animasi opacity backdrop agar halus
                setTimeout(() => backdrop.classList.remove('opacity-0'), 10);
            }

            function closeSidebar() {
                sidebar.classList.add('-translate-x-full');
                backdrop.classList.add('opacity-0');
                setTimeout(() => backdrop.classList.add('hidden'), 300);
            }

            // Event Listeners
            if (toggleButton) toggleButton.addEventListener('click', openSidebar);
            if (closeButton) closeButton.addEventListener('click', closeSidebar);
            if (backdrop) backdrop.addEventListener('click', closeSidebar);

            // Scroll Effect
            window.addEventListener('scroll', () => {
                if (window.scrollY > 10) {
                    navbar.classList.add('navbar-scrolled');
                } else {
                    navbar.classList.remove('navbar-scrolled');
                }
            });
        });
    </script>
</body>
</html>