<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="theme-color" content="#0f172a">
    <link rel="manifest" href="/manifest.json">

    <title>Dardcor - Upload Tugas</title> 
    <link rel="icon" href="/logo.png">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        body { 
            background-color: #0f172a; 
            min-height: 100vh; 
            font-family: 'Poppins', sans-serif; 
            overflow-x: hidden; 
            color: #cbd5e1; 
        }
        /* Sidebar Styling */
        .sidebar { 
            background-color: #1e293b; 
            box-shadow: 5px 0 20px rgba(0,0,0,0.4); 
            border-right: 1px solid #334155; 
            z-index: 50;
            width: 280px;
            transition: transform 0.3s ease-in-out;
        }
        
        /* Content Wrapper Transition */
        #mainContent {
            transition: margin-left 0.3s ease-in-out;
        }

        /* Navbar Styling */
        .navbar { 
            transition: all 0.3s ease; 
            backdrop-filter: blur(10px); 
            z-index: 40;
        }
        .navbar-scrolled { 
            background-color: rgba(15, 23, 42, 0.95); 
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3); 
            border-bottom: 1px solid #334155; 
        }
        
        /* Card Styling */
        .content-card {
            background: linear-gradient(145deg, #1e293b, #0f172a);
            border: 1px solid #334155;
            box-shadow: 0 10px 25px rgba(0,0,0,0.3);
            animation: fadeIn 0.6s ease-out;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        input[type="text"], input[type="number"], input[type="datetime-local"], select, textarea {
            background: rgba(15, 23, 42, 0.7);
            border: 1px solid #334155;
            color: white;
        }
        input:focus, select:focus, textarea:focus {
            border-color: #3b82f6;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
            outline: none;
        }
        
        .no-scrollbar::-webkit-scrollbar { display: none; }
        .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
        
        .custom-scroll::-webkit-scrollbar {
            width: 6px;
            height: 6px;
        }
        .custom-scroll::-webkit-scrollbar-track {
            background: #1e293b; 
        }
        .custom-scroll::-webkit-scrollbar-thumb {
            background: #475569; 
            border-radius: 10px;
        }
        .custom-scroll::-webkit-scrollbar-thumb:hover {
            background: #64748b; 
        }
    </style>
</head>
<body class="relative">

    <div id="sidebarBackdrop" class="fixed inset-0 bg-black/50 z-40 hidden lg:hidden transition-opacity duration-300 opacity-0"></div>

    <div class="relative min-h-screen flex">

        <aside id="sidebar" class="sidebar fixed top-0 left-0 h-full p-0 text-white transform -translate-x-full lg:translate-x-0 flex flex-col">
            
            <div class="flex items-center justify-between pb-4 border-b border-white/20 mb-4 flex-shrink-0 px-6 pt-6">
                <h2 class="text-2xl font-bold whitespace-nowrap">Dashboard</h2>
                <button id="sidebarCloseButton" class="lg:hidden p-1 rounded-full text-white/70 hover:bg-white/10 hover:text-white transition-colors">
                      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                </button>
            </div>
            
            <nav class="flex-grow px-6 overflow-y-auto no-scrollbar"> 
                <ul class="space-y-3">
                    <li>
                        <a href="/admin/home" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors hover:bg-blue-600 text-gray-300 hover:text-white whitespace-nowrap">
                            <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6-4a1 1 0 001-1v-1a1 1 0 10-2 0v1a1 1 0 001 1z"></path></svg>
                            <span>Home</span>
                        </a>
                    </li>
                    
                    <li>
                        <a href="/admin/upload-ai" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors hover:bg-blue-600 text-gray-300 hover:text-white whitespace-nowrap">
                            <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M12 5V3m0 18v-2M7.05 7.05l-1.414-1.414M18.364 18.364l-1.414-1.414M7.05 18.364l-1.414 1.414M18.364 7.05l-1.414 1.414M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                            <span>Upload AI</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/upload-jadwal" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors hover:bg-blue-600 text-gray-300 hover:text-white whitespace-nowrap">
                            <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                            <span>Upload Jadwal</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/upload-tugas" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors bg-blue-600 text-white whitespace-nowrap">
                            <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path></svg>
                            <span>Upload Tugas</span>
                        </a>
                    </li>
                </ul>
            </nav>

            <div class="mt-auto flex-shrink-0 px-6 pb-6"> 
                <a href="/logout" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors bg-red-600/20 text-red-300 hover:bg-red-600 hover:text-white whitespace-nowrap">
                    <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15M12 9l-3 3m0 0l3 3m-3-3h12.75"></path></svg>
                    <span>Logout</span>
                </a>
            </div>
        </aside>

        <div id="mainContent" class="flex-1 min-w-0 flex flex-col min-h-screen lg:ml-[280px] transition-all duration-300 w-full">
            
            <div class="sticky top-0 z-30 p-4 md:p-6">
                <nav id="navbar" class="w-full max-w-6xl mx-auto bg-white/90 backdrop-blur-sm rounded-full shadow-lg border border-gray-200/50 flex items-center justify-between px-4 py-3 navbar">
                    <div class="flex items-center gap-1 md:gap-3">
                        <button id="sidebarToggle" class="text-gray-700 p-2 transition-colors hover:bg-gray-100 rounded-full">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
                        </button>
                        <a href="/" class="flex items-center gap-2">
                            <span class="text-xl font-bold text-gray-800">Dardcor</span>
                        </a>
                    </div>
                    
                    <div class="flex items-center gap-3">
                        <a href="/admin" class="w-10 h-10 rounded-full flex items-center justify-center bg-gray-100 hover:bg-gray-200 transition-colors" aria-label="Admin Login">
                            <img src="/logo.png" alt="Logo Admin" class="w-full h-full object-contain p-1 rounded-full">
                        </a>
                    </div>
                </nav>
            </div>

            <main class="flex-1 p-4 pt-4 w-full max-w-6xl mx-auto flex flex-col lg:flex-row gap-8 items-start">
                
                <div class="content-card text-white p-6 md:p-8 rounded-2xl w-full lg:w-1/2">
                    <h2 class="text-2xl font-bold mb-6 border-b border-gray-700 pb-2 text-center">Tambah Tugas Baru</h2>
                    
                    <form action="/admin/upload-tugas" method="POST" class="space-y-4">
                        
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-400 mb-1">Mata Kuliah</label>
                                <input type="text" name="mata_kuliah" required placeholder="Contoh: Pemrograman Web" class="w-full p-3 rounded-lg">
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-gray-400 mb-1">Deadline</label>
                                <input type="datetime-local" name="deadline" class="w-full p-3 rounded-lg">
                            </div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-400 mb-1">Hari</label>
                                <select name="hari" required class="w-full p-3 rounded-lg">
                                    <option value="Senin">Senin</option>
                                    <option value="Selasa">Selasa</option>
                                    <option value="Rabu">Rabu</option>
                                    <option value="Kamis">Kamis</option>
                                    <option value="Jumat">Jumat</option>
                                </select>
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-gray-400 mb-1">Minggu Ke-</label>
                                <select name="minggu" required class="w-full p-3 rounded-lg">
                                    <% for(let i=1; i<=16; i++) { %>
                                        <option value="<%= i %>">Minggu <%= i %></option>
                                    <% } %>
                                </select>
                            </div>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-400 mb-1">Deskripsi Tugas</label>
                            <textarea name="deskripsi" rows="4" required placeholder="Detail tugas..." class="w-full p-3 rounded-lg"></textarea>
                        </div>

                        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 rounded-lg transition-all transform hover:scale-[1.02] flex items-center justify-center gap-2">
                            <i class="fas fa-upload"></i> Upload Tugas
                        </button>
                    </form>
                </div>

                <div class="content-card p-6 md:p-8 rounded-2xl w-full lg:w-1/2">
                    <h3 class="text-xl font-bold text-white mb-4 border-b border-gray-700 pb-2 text-center">Daftar Tugas Terupload</h3>
                    
                    <div class="overflow-x-auto custom-scroll max-h-[500px]">
                        <table class="w-full text-left text-sm text-gray-300">
                            <thead class="bg-gray-800 text-gray-100 uppercase sticky top-0 z-10">
                                <tr>
                                    <th class="px-3 py-2 md:px-4 md:py-3">Minggu</th>
                                    <th class="px-3 py-2 md:px-4 md:py-3">Hari</th>
                                    <th class="px-3 py-2 md:px-4 md:py-3">Matkul</th>
                                    <th class="px-3 py-2 md:px-4 md:py-3">Deadline</th>
                                    <th class="px-3 py-2 md:px-4 md:py-3 text-center">Aksi</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-700">
                                <% if (tasks && tasks.length > 0) { %>
                                    <% tasks.forEach(task => { %>
                                        <tr class="hover:bg-gray-800/50 transition-colors">
                                            <td class="px-3 py-2 md:px-4 md:py-3">Mg <%= task.minggu %></td>
                                            <td class="px-3 py-2 md:px-4 md:py-3"><%= task.hari %></td>
                                            <td class="px-3 py-2 md:px-4 md:py-3 font-medium text-white"><%= task.mata_kuliah %></td>
                                            <td class="px-3 py-2 md:px-4 md:py-3 text-red-400">
                                                <%= task.deadline ? new Date(task.deadline).toLocaleString('id-ID', { day: 'numeric', month: 'short', hour: '2-digit', minute:'2-digit' }) : '-' %>
                                            </td>
                                            <td class="px-3 py-2 md:px-4 md:py-3 text-center">
                                                <form action="/admin/delete-tugas" method="POST" onsubmit="return confirm('Hapus tugas ini?');">
                                                    <input type="hidden" name="id" value="<%= task.id %>">
                                                    <button type="submit" class="text-red-500 hover:text-red-400 bg-red-500/10 p-2 rounded-lg transition-colors">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="5" class="px-4 py-6 text-center text-gray-500">Belum ada tugas yang diupload.</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>

            </main>
        </div>

    </div> 
    
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const toggleButton = document.getElementById('sidebarToggle');
            const sidebar = document.getElementById('sidebar');
            const backdrop = document.getElementById('sidebarBackdrop');
            const closeButton = document.getElementById('sidebarCloseButton');
            const navbar = document.getElementById('navbar');
            const mainContent = document.getElementById('mainContent');

            let sidebarOpen = false;

            // Function to handle opening sidebar
            function openSidebar() {
                if (window.innerWidth < 1024) {
                    // Mobile behavior: Translate from left
                    sidebar.classList.remove('-translate-x-full');
                    backdrop.classList.remove('hidden');
                    setTimeout(() => backdrop.classList.remove('opacity-0'), 10);
                    document.body.style.overflow = 'hidden';
                } else {
                    // Desktop behavior: Expand sidebar and push content
                    sidebar.classList.remove('-translate-x-full');
                    mainContent.classList.add('lg:ml-[280px]');
                    mainContent.classList.remove('lg:ml-0');
                }
                sidebarOpen = true;
            }

            // Function to handle closing sidebar
            function closeSidebar() {
                if (window.innerWidth < 1024) {
                    // Mobile behavior: Hide to left
                    sidebar.classList.add('-translate-x-full');
                    backdrop.classList.add('opacity-0');
                    setTimeout(() => backdrop.classList.add('hidden'), 300);
                    document.body.style.overflow = '';
                } else {
                    // Desktop behavior: Collapse sidebar and expand content
                    sidebar.classList.add('-translate-x-full');
                    mainContent.classList.remove('lg:ml-[280px]');
                    mainContent.classList.add('lg:ml-0');
                }
                sidebarOpen = false;
            }

            // Toggle function
            function toggleSidebar() {
                if (sidebarOpen) {
                    closeSidebar();
                } else {
                    openSidebar();
                }
            }

            // Event Listeners
            if (toggleButton) toggleButton.addEventListener('click', toggleSidebar);
            if (closeButton) closeButton.addEventListener('click', closeSidebar);
            if (backdrop) backdrop.addEventListener('click', closeSidebar);

            // Navbar Scroll Effect
            window.addEventListener('scroll', () => {
                if (window.scrollY > 10) {
                    navbar.classList.add('navbar-scrolled');
                } else {
                    navbar.classList.remove('navbar-scrolled');
                }
            });

            // Handle Resize Logic
            window.addEventListener('resize', () => {
                if (window.innerWidth >= 1024) {
                    // Reset mobile specific styles when moving to desktop
                    backdrop.classList.add('hidden');
                    backdrop.classList.add('opacity-0');
                    document.body.style.overflow = '';
                    
                    // Ensure sidebar is open by default on desktop if logic requires, 
                    // or respect current state but adjust layout classes
                    if (sidebarOpen) {
                        sidebar.classList.remove('-translate-x-full');
                        mainContent.classList.add('lg:ml-[280px]');
                        mainContent.classList.remove('lg:ml-0');
                    } else {
                        sidebar.classList.add('-translate-x-full');
                        mainContent.classList.remove('lg:ml-[280px]');
                        mainContent.classList.add('lg:ml-0');
                    }
                } else {
                    // Reset desktop specific margins when moving to mobile
                    mainContent.classList.remove('lg:ml-[280px]');
                    mainContent.classList.remove('lg:ml-0');
                    
                    if (sidebarOpen) {
                         sidebar.classList.remove('-translate-x-full');
                         backdrop.classList.remove('hidden');
                         backdrop.classList.remove('opacity-0');
                    } else {
                         sidebar.classList.add('-translate-x-full');
                         backdrop.classList.add('hidden');
                    }
                }
            });

            // Initialize state based on screen size
            if (window.innerWidth >= 1024) {
                openSidebar(); // Default open on desktop
            } else {
                closeSidebar(); // Default closed on mobile
            }
        });
    </script>
</body>
</html>