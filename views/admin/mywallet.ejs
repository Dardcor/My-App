                <a href="/admin" class="w-10 h-10 rounded-full flex items-center justify-center bg-gray-100 hover:bg-gray-200 transition-colors" aria-label="Admin Login">
                    <img src="/logo.png" alt="Logo Admin" class="w-full h-full object-contain p-1 rounded-full">
                </a>
            </nav>
        </div>
            
        <main class="relative flex items-center justify-center p-4 min-h-screen">
            <div class="container mx-auto p-4 pb-20 pt-24 md:pt-28 w-full max-w-6xl">
        
                <div class="bank-card rounded-xl overflow-hidden mb-6">
                    <div class="p-6">
                        <div class="flex justify-between items-center mb-4">
                            <div>
                                <p class="text-slate-400">Saldo Tersedia</p>
                                <h2 class="text-3xl font-bold text-blue-400">Rp <%= balance.toLocaleString('id-ID', { minimumFractionDigits: 2 }) %></h2>
                            </div>
                            <div class="bg-blue-900 bg-opacity-30 text-blue-400 p-3 rounded-full border border-blue-800">
                                <i class="fas fa-wallet text-2xl"></i>
                            </div>
                        </div>
                        <div class="grid grid-cols-2 md:grid-cols-4 gap-2 text-center">
                            <button onclick="openModal('add')" class="bg-blue-800 hover:bg-blue-700 p-3 rounded-lg text-white"> <i class="fas fa-plus-circle text-xl block mx-auto mb-1"></i> <span class="text-xs font-medium">Tambah</span> </button>
                            <button onclick="openModal('transfer')" class="bg-blue-800 hover:bg-blue-700 p-3 rounded-lg text-white"> <i class="fas fa-exchange-alt text-xl block mx-auto mb-1"></i> <span class="text-xs font-medium">Transfer</span> </button>
                            <button onclick="openModal('withdraw')" class="bg-blue-800 hover:bg-blue-700 p-3 rounded-lg text-white"> <i class="fas fa-money-bill-wave text-xl block mx-auto mb-1"></i> <span class="text-xs font-medium">Tarik</span> </button>
                            <button onclick="openModal('payment')" class="bg-blue-800 hover:bg-blue-700 p-3 rounded-lg text-white"> <i class="fas fa-qrcode text-xl block mx-auto mb-1"></i> <span class="text-xs font-medium">Bayar</span> </button>
                        </div>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
                    <div class="bank-card p-4 rounded-xl">
                        <div class="flex items-center">
                            <div class="bg-green-900 bg-opacity-30 text-green-400 p-2 rounded-full mr-3 border border-green-800"><i class="fas fa-arrow-down"></i></div>
                            <div>
                                <p class="text-slate-400 text-sm">Pemasukan</p>
                                <p class="font-bold text-green-400">Rp <%= (totals.total_deposit || 0).toLocaleString('id-ID', { minimumFractionDigits: 2 }) %></p>
                            </div>
                        </div>
                    </div>
                    <div class="bank-card p-4 rounded-xl">
                        <div class="flex items-center">
                            <div class="bg-red-900 bg-opacity-30 text-red-400 p-2 rounded-full mr-3 border border-red-800"><i class="fas fa-arrow-up"></i></div>
                            <div>
                                <p class="text-slate-400 text-sm">Pengeluaran</p>
                                <p class="font-bold text-red-400">Rp <%= ((totals.total_withdraw || 0) + (totals.total_transfer || 0) + (totals.total_payment || 0)).toLocaleString('id-ID', { minimumFractionDigits: 2 }) %></p>
                            </div>
                        </div>
                    </div>
                    <div class="bank-card p-4 rounded-xl">
                        <div class="flex items-center">
                            <div class="bg-yellow-900 bg-opacity-30 text-yellow-400 p-2 rounded-full mr-3 border border-yellow-800"><i class="fas fa-gift"></i></div>
                            <div>
                                <p class="text-slate-400 text-sm">Imbalan Harian</p>
                                <p class="font-bold text-yellow-400">Rp <%= (totals.total_reward || 0).toLocaleString('id-ID', { minimumFractionDigits: 2 }) %></p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bank-card rounded-xl overflow-hidden">
                    <div class="p-4 border-b border-slate-700 flex justify-between items-center">
                        <h2 class="font-bold text-lg">Riwayat Transaksi</h2>
                        <div class="relative">
                            <select class="bg-slate-800 border-0 rounded-lg pl-3 pr-8 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 text-white"> <option>Semua</option> <option>Pemasukan</option> <option>Pengeluaran</option> <option>Imbalan Harian</option> </select>
                            <div class="absolute right-3 top-2.5 pointer-events-none"> <i class="fas fa-chevron-down text-slate-400 text-xs"></i> </div>
                        </div>
                    </div>
                    <div class="divide-y divide-slate-700">
                        <% if(transactions.length === 0) { %>
                            <div class="p-6 text-center text-slate-500">
                                <i class="fas fa-exchange-alt text-3xl mb-2 text-slate-700"></i>
                                <p>Belum ada transaksi</p>
                            </div>
                        <% } else { %>
                            <% transactions.forEach(row => { %>
                                <div class="p-4 hover:bg-slate-900 transition" 
                                     id="tx-<%= row.id %>" 
                                     data-row='<%- JSON.stringify(row).replace(new RegExp("'", "g"), "&#39;") %>'>
                                    
                                    <div class="flex justify-between items-center">
                                        <div class="flex items-center">
                                            <div class="mr-3">
                                                <% if(row.type === 'deposit') { %>
                                                    <div class="bg-green-900 bg-opacity-30 text-green-400 p-2 rounded-full border border-green-800"><i class="fas fa-arrow-down"></i></div>
                                                <% } else if(row.type === 'withdraw') { %>
                                                    <div class="bg-red-900 bg-opacity-30 text-red-400 p-2 rounded-full border border-red-800"><i class="fas fa-arrow-up"></i></div>
                                                <% } else if(row.type === 'reward') { %>
                                                    <div class="bg-yellow-900 bg-opacity-30 text-yellow-400 p-2 rounded-full border border-yellow-800"><i class="fas fa-gift"></i></div>
                                                <% } else if(row.type === 'transfer') { %>
                                                    <div class="bg-blue-900 bg-opacity-30 text-blue-400 p-2 rounded-full border border-blue-800"><i class="fas fa-exchange-alt"></i></div>
                                                <% } else { %>
                                                    <div class="bg-purple-900 bg-opacity-30 text-purple-400 p-2 rounded-full border border-purple-800"><i class="fas fa-qrcode"></i></div>
                                                <% } %>
                                            </div>
                                            <div>
                                                <p class="font-medium"><%= row.description %></p>
                                                <p class="text-sm text-slate-400">
                                                    <% const date = new Date(row.created_at); %>
                                                    <%= date.toLocaleString('id-ID', { day: '2-digit', month: 'short', year: 'numeric', hour: '2-digit', minute: '2-digit', timeZone: 'Asia/Jakarta' }) %>
                                                    <% if(row.recipient) { %>
                                                        <span class="text-xs bg-slate-800 px-2 py-0.5 rounded ml-1">ke <%= row.recipient %></span>
                                                    <% } %>
                                                </p>
                                            </div>
                                        </div>
                                        <div class="text-right">
                                            <p class="font-bold <%= row.type === 'deposit' || row.type === 'reward' ? 'text-green-400' : 'text-red-400' %>">
                                                <%= (row.type === 'deposit' || row.type === 'reward' ? '+' : '-') + ' Rp ' + (parseFloat(row.amount) || 0).toLocaleString('id-ID', { minimumFractionDigits: 2 }) %>
                                            </p>
                                            <div class="flex space-x-2 mt-1 justify-end">
                                                <button onclick='openEditModal(<%= row.id %>)' class="text-blue-400 hover:text-blue-300 text-sm">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <form method="POST" action="/bank/delete" onsubmit="return confirm('Hapus transaksi ini?')" class="inline">
                                                    <input type="hidden" name="id" value="<%= row.id %>">
                                                    <button type="submit" class="text-red-400 hover:text-red-300 text-sm">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        <% } %>
                    </div>
                </div>
            </div>
            
        </main>
    </div> 
    
    <div id="sidebarBackdrop" class="fixed inset-0 bg-black/50 z-30 hidden"></div>

    <div id="transactionModal" class="fixed inset-0 bg-black bg-opacity-70 flex items-center justify-center p-4 z-50 hidden backdrop-blur-sm">
        <div class="modal-content rounded-xl w-full max-w-md">
            <div class="p-4 border-b border-slate-700 flex justify-between items-center">
                <h3 class="font-bold text-lg" id="modalTitle">Tambah Transaksi</h3>
                <button onclick="closeModal()" class="text-slate-400 hover:text-white"> <i class="fas fa-times"></i> </button>
            </div>
            <form method="POST" id="transactionForm" action="/bank/add">
                <input type="hidden" name="id" id="editId">
                <div class="p-4 space-y-4">
                    <div>
                        <label class="block text-slate-300 text-sm font-medium mb-1">Jenis Transaksi</label>
                        <select name="type" id="transactionType" class="w-full p-2 rounded-lg"> <option value="deposit">Setoran</option> <option value="withdraw">Penarikan</option> <option value="transfer">Transfer</option> <option value="payment">Pembayaran</option> <option value="reward">Hadiah</option> </select>
                    </div>
                    <div>
                        <label class="block text-slate-300 text-sm font-medium mb-1">Jumlah</label>
                        <input type="number" step="0.01" name="amount" id="amount" required class="w-full p-2 rounded-lg">
                    </div>
                    <div id="recipientField" class="hidden">
                        <label class="block text-slate-300 text-sm font-medium mb-1">Penerima</label>
                        <input type="text" name="recipient" id="recipient" class="w-full p-2 rounded-lg">
                    </div>
                    <div>
                        <label class="block text-slate-300 text-sm font-medium mb-1">Deskripsi</label>
                        <input type="text" name="description" id="description" required class="w-full p-2 rounded-lg">
                    </div>
                </div>
                <div class="p-4 border-t border-slate-700 flex justify-end space-x-2">
                    <button type="button" onclick="closeModal()" class="px-4 py-2 border border-slate-700 rounded-lg text-slate-300 hover:bg-slate-800">Batal</button>
                    <button type="submit" class="px-4 py-2 bg-blue-700 text-white rounded-lg hover:bg-blue-600 border border-blue-600">Simpan</button>
                </div>
            </form>
        </div>
    </div>


    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const toggleButton = document.getElementById('sidebarToggle');
            const sidebar = document.getElementById('sidebar');
            const backdrop = document.getElementById('sidebarBackdrop');
            const closeButton = document.getElementById('sidebarCloseButton');
            const navbar = document.getElementById('navbar');

            function toggleMenu() {
                sidebar.classList.toggle('w-60'); 
                sidebar.classList.toggle('w-0');   
                sidebar.classList.toggle('p-6'); 
                sidebar.classList.toggle('p-0'); 
                backdrop.classList.toggle('hidden');
            }

            function handleScroll() {
                if (window.scrollY > 10) {
                    navbar.classList.add('navbar-scrolled');
                } else {
                    navbar.classList.remove('navbar-scrolled');
                }
            }

            if (toggleButton && sidebar && backdrop && closeButton) {
                toggleButton.addEventListener('click', toggleMenu);
                backdrop.addEventListener('click', toggleMenu);
                closeButton.addEventListener('click', toggleMenu);
            }

            window.addEventListener('scroll', handleScroll);
            handleScroll();
        });
    </script>

    <script>
        const transactionModal = document.getElementById('transactionModal');
        const transactionForm = document.getElementById('transactionForm');
        const modalTitle = document.getElementById('modalTitle');
        const transactionType = document.getElementById('transactionType');
        const recipientField = document.getElementById('recipientField');
        const editIdInput = document.getElementById('editId');
        
        function openModal(type, data = null) {
            if (!transactionModal || !transactionForm) {
                console.error('Modal atau form tidak ditemukan');
                return;
            }
            
            transactionForm.reset();
            editIdInput.value = '';
            
            transactionForm.action = data ? '/bank/edit' : '/bank/add'; 
            
            if (data) { 
                modalTitle.textContent = 'Edit Transaksi';
                editIdInput.value = data.id;
                transactionType.value = data.type;
                document.getElementById('amount').value = data.amount;
                document.getElementById('description').value = data.description;
                
                if (data.type === 'transfer' || data.type === 'payment') {
                    document.getElementById('recipient').value = data.recipient || '';
                    recipientField.classList.remove('hidden');
                } else {
                    recipientField.classList.add('hidden');
                }
            } else { 
                if (type === 'transfer') {
                    transactionType.value = 'transfer';
                    modalTitle.textContent = 'Transfer Dana';
                    recipientField.classList.remove('hidden');
                } else if (type === 'withdraw') {
                    transactionType.value = 'withdraw';
                    modalTitle.textContent = 'Tarik Dana';
                    recipientField.classList.add('hidden');
                } else if (type === 'payment') {
                    transactionType.value = 'payment';
                    modalTitle.textContent = 'Lakukan Pembayaran';
                    recipientField.classList.remove('hidden');
                } else { 
                    transactionType.value = 'deposit'; 
                    modalTitle.textContent = 'Tambah Transaksi';
                    recipientField.classList.add('hidden');
                }
            }
            
            transactionModal.classList.remove('hidden');
        }
        
        function openEditModal(transactionId) {
            try {
                const rowElement = document.getElementById('tx-' + transactionId);
                
                if (!rowElement) {
                    console.error('Elemen transaksi tidak ditemukan dengan ID:', transactionId);
                    return;
                }
                
                const dataRow = rowElement.getAttribute('data-row');
                
                if (!dataRow) {
                    console.error('Data transaksi tidak ditemukan untuk ID:', transactionId);
                    return;
                }
                
                const data = JSON.parse(dataRow);
                
                openModal('edit', data);
            } catch (error) {
                console.error('Error saat membuka modal edit:', error);
                alert('Terjadi kesalahan saat membuka data transaksi');
            }
        }
        
        function closeModal() {
            if (transactionModal) {
                transactionModal.classList.add('hidden');
            }
        }
        
        if (transactionType) {
            transactionType.addEventListener('change', function() {
                if (this.value === 'transfer' || this.value === 'payment') {
                    recipientField.classList.remove('hidden');
                } else {
                    recipientField.classList.add('hidden');
                }
            });
        }
