    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const toggleButton = document.getElementById('sidebarToggle');
            const sidebar = document.getElementById('sidebar');
            const backdrop = document.getElementById('sidebarBackdrop');
            const closeButton = document.getElementById('sidebarCloseButton');
            
            const mobileDropdownToggle = document.getElementById('mobileDropdownToggle');
            const mobileDropdownMenu = document.getElementById('mobileDropdownMenu');
            const navbar = document.getElementById('navbar');

            function toggleSidebar() {
                sidebar.classList.toggle('w-60');
                sidebar.classList.toggle('w-0');
                sidebar.classList.toggle('p-6');
                sidebar.classList.toggle('p-0');
                backdrop.classList.toggle('hidden');
            }

            function toggleMobileDropdown() {
                mobileDropdownMenu.classList.toggle('hidden');
            }

            function handleScroll() {
                if (window.scrollY > 10) {
                    navbar.classList.add('navbar-scrolled');
                } else {
                    navbar.classList.remove('navbar-scrolled');
                }
            }

            if (toggleButton && sidebar && backdrop && closeButton) {
                toggleButton.addEventListener('click', toggleSidebar);
                backdrop.addEventListener('click', toggleSidebar);
                closeButton.addEventListener('click', toggleSidebar);
            }

            if (mobileDropdownToggle && mobileDropdownMenu) {
                mobileDropdownToggle.addEventListener('click', toggleMobileDropdown);
            }

            document.addEventListener('click', (event) => {
                if (mobileDropdownMenu && !mobileDropdownMenu.contains(event.target) && 
                    mobileDropdownToggle && !mobileDropdownToggle.contains(event.target)) {
                    mobileDropdownMenu.classList.add('hidden');
                }
            });

            window.addEventListener('scroll', handleScroll);
            handleScroll();

            window.addEventListener('load', function() {
                const headerImg = new Image();
                headerImg.src = '/header.jpg';
                const logoImg = new Image();
                logoImg.src = '/logo.png';
            });
        });

        function scrollProjects(direction) {
            const container = document.getElementById('projectsContainer');
            const scrollAmount = 400;
            if (direction === 'left') {
                container.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
            } else {
                container.scrollBy({ left: scrollAmount, behavior: 'smooth' });
            }
        }
    </script>
