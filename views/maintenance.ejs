            75% { clip: rect(10px, 9999px, 30px, 0); } 
            80% { clip: rect(60px, 9999px, 80px, 0); } 
            85% { clip: rect(20px, 9999px, 90px, 0); } 
            90% { clip: rect(80px, 9999px, 100px, 0); } 
            95% { clip: rect(40px, 9999px, 60px, 0); } 
            100% { clip: rect(50px, 9999px, 70px, 0); } 
        }
        
        @keyframes loading {
            0% { transform: translateX(-100%); }
            50% { transform: translateX(0); }
            100% { transform: translateX(100%); }
        }
        
        @keyframes gradient {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }
        
        .gradient-bg {
            background: linear-gradient(-45deg, #020617, #0f172a, #1e293b, #334155);
            background-size: 400% 400%;
            animation: gradient 15s ease infinite;
        }
        
        @keyframes float {
            0% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
            100% { transform: translateY(0px); }
        }
        
        .float {
            animation: float 6s ease-in-out infinite;
        }
        
        #particles-js {
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            z-index: -1;
        }
        
        .status-card {
            background: rgba(30, 41, 59, 0.5);
            backdrop-filter: blur(10px);
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: 0 8px 16px -2px rgba(0, 0, 0, 0.2);
            border: 1px solid rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
        }
        
        .status-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 20px -4px rgba(0, 0, 0, 0.3);
            border-color: rgba(96, 165, 250, 0.3);
        }
        
        .status-icon {
            font-size: 2rem;
            margin-bottom: 1rem;
            color: #60a5fa;
        }
        
        .social-link {
            transition: all 0.3s ease;
        }
        
        .social-link:hover {
            transform: translateY(-3px);
            color: #60a5fa;
        }
        
        .progress-step {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
            position: relative;
        }
        
        .step-number {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background: #1e293b;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
            font-weight: 600;
            color: #94a3b8;
            border: 2px solid #334155;
            flex-shrink: 0;
        }
        
        .step-active .step-number {
            background: #60a5fa;
            color: white;
            border-color: #60a5fa;
        }
        
        .step-completed .step-number {
            background: #10b981;
            color: white;
            border-color: #10b981;
        }
        
        .step-text {
            flex: 1;
            text-align: left;
            font-size: 0.9rem;
        }
        
        .step-line {
            position: absolute;
            left: 15px;
            top: 32px;
            bottom: -16px;
            width: 2px;
            background: #334155;
            z-index: -1;
        }
        
        .step-completed .step-line {
            background: #10b981;
        }
        
        @media (min-width: 768px) {
            .glitch {
                font-size: 4rem;
            }
            .step-text {
                font-size: 1rem;
            }
        }
        
        @media (min-width: 1024px) {
            .glitch {
                font-size: 6rem;
            }
        }
    </style>
</head>
