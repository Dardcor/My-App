            25% { clip: rect(30px, 9999px, 50px, 0); } 
            30% { clip: rect(70px, 9999px, 90px, 0); } 
            35% { clip: rect(10px, 9999px, 30px, 0); } 
            40% { clip: rect(60px, 9999px, 80px, 0); } 
            45% { clip: rect(20px, 9999px, 90px, 0); } 
