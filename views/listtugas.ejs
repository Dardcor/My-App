<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>Dardcor</title>
    <link rel="icon" href="/logo.png">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        html { scroll-behavior: smooth; }
        body { 
            background-color: #1a1a2e;
            min-height: 100vh; 
            font-family: sans-serif; 
            overflow-x: hidden; 
            color: #cbd5e1;
        }
        .sidebar {
            background-color: #16213e;
            box-shadow: 5px 0 15px rgba(0,0,0,0.4);
            z-index: 50;
        }
        .task-card {
            background-color: #1e293b;
            border: 1px solid #334155;
            transition: all 0.3s ease;
            animation: fadeIn 0.5s ease-out;
        }
        .task-card:hover {
            transform: translateY(-5px);
            border-color: #3b82f6;
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        }
        .badge-week { background-color: #3b82f6; color: white; }
        .badge-day { background-color: #0f172a; color: #94a3b8; border: 1px solid #334155; }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .navbar {
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
            z-index: 40;
        }
        .navbar-scrolled {
            background-color: rgba(255, 255, 255, 0.95);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }
        .no-scrollbar::-webkit-scrollbar { display: none; }
        .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
    </style>
</head>
<body class="relative">

    <div id="sidebarBackdrop" class="fixed inset-0 bg-black/50 z-40 hidden lg:hidden transition-opacity duration-300 opacity-0"></div>

    <div class="relative min-h-screen">

        <aside id="sidebar" class="sidebar fixed top-0 left-0 h-full w-64 p-0 text-white transform -translate-x-full transition-transform duration-300 ease-in-out flex flex-col">
            
            <div class="flex items-center justify-between pb-4 border-b border-white/20 mb-4 flex-shrink-0 px-6 pt-6">
                <h2 class="text-2xl font-bold whitespace-nowrap">My App</h2>
                <button id="sidebarCloseButton" class="p-1 rounded-full text-white/70 hover:bg-white/10 hover:text-white transition-colors">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                </button>
            </div>
            
            <nav class="flex-grow px-6 overflow-y-auto no-scrollbar"> 
                <ul class="space-y-3">
                    <li>
                        <a href="/" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors hover:bg-blue-600 text-gray-300 hover:text-white whitespace-nowrap">
                            <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6-4a1 1 0 001-1v-1a1 1 0 10-2 0v1a1 1 0 001 1z"></path></svg>
                            <span>Home</span>
                        </a>
                    </li>
                    <li>
                        <a href="/list-ai" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors hover:bg-blue-600 text-gray-300 hover:text-white whitespace-nowrap">
                            <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M12 5V3m0 18v-2M7.05 7.05l-1.414-1.414M18.364 18.364l-1.414-1.414M7.05 18.364l-1.414 1.414M18.364 7.05l-1.414 1.414M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                            <span>List AI</span>
                        </a>
                    </li>
                    <li>
                        <a href="/jadwal-kuliah" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors hover:bg-blue-600 text-gray-300 hover:text-white whitespace-nowrap">
                            <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                            <span>Jadwal Kuliah</span>
                        </a>
                    </li>
                    <li>
                        <a href="/list-tugas" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors bg-blue-600 text-white whitespace-nowrap">
                            <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path></svg>
                            <span>List Tugas</span>
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="mt-auto flex-shrink-0 px-6 pb-6"> 
                <a href="/user" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors hover:bg-blue-600 text-gray-300 hover:text-white whitespace-nowrap">
                    <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm-2.92 7.06a11.91 11.91 0 00-2.16 0A11.97 11.97 0 005 21h14a11.97 11.97 0 00-4.08-3.94z"></path></svg>
                    <span>Login</span>
                </a>
            </div>
        </aside>

        <div class="min-h-screen">
            
            <div class="fixed top-0 left-0 w-full p-4 md:p-6 flex justify-center z-30">
                <nav id="navbar" class="w-full max-w-6xl bg-white/90 backdrop-blur-sm rounded-full shadow-lg border border-gray-200/50 flex items-center justify-between px-4 py-3 navbar">
                    <div class="flex items-center gap-1 md:gap-3">
                        <button id="sidebarToggle" class="text-gray-700 p-2 transition-colors hover:bg-gray-100 rounded-full">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
                        </button>
                        <span class="text-xl font-bold text-gray-800">Dardcor</span>
                    </div>
                    <a href="/admin" class="w-10 h-10 rounded-full flex items-center justify-center bg-gray-100 hover:bg-gray-200 transition-colors">
                        <img src="/logo.png" alt="Logo Admin" class="w-full h-full object-contain p-1 rounded-full">
                    </a>
                </nav>
            </div>

            <main class="relative min-h-screen">
                <div class="relative w-full px-4 py-8 pt-32 md:pt-40 max-w-6xl mx-auto">
                    <div class="mb-8 text-center md:text-left flex flex-col md:flex-row justify-between items-end gap-4">
                        <div>
                            <h1 class="text-3xl md:text-4xl font-extrabold text-white">Daftar Tugas Kuliah</h1>
                            <p class="text-gray-300 mt-2 text-lg">Pantau deadline dan selesaikan tugas tepat waktu.</p>
                        </div>
                        <div class="w-full md:w-64">
                            <label for="weekFilter" class="block mb-2 text-sm font-medium text-gray-300">Filter Minggu:</label>
                            <select id="weekFilter" class="bg-gray-800 border border-gray-600 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                                <option value="all" selected>Tampilkan Semua</option>
                                <% for(let i=1; i<=16; i++) { %>
                                    <option value="<%= i %>">Minggu <%= i %></option>
                                <% } %>
                            </select>
                        </div>
                    </div>

                    <% if (tasks && tasks.length > 0) { %>
                        <div id="tasksContainer" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                            <% tasks.forEach(task => { %>
                                <div class="task-card rounded-2xl p-6 flex flex-col h-full relative overflow-hidden group" data-week="<%= task.minggu %>">
                                    <div class="flex justify-between items-start mb-4">
                                        <span class="badge-week text-xs font-bold px-3 py-1 rounded-full shadow-sm">Minggu <%= task.minggu %></span>
                                        <span class="badge-day text-xs font-medium px-3 py-1 rounded-full"><%= task.hari %></span>
                                    </div>
                                    <div class="flex-grow">
                                        <h3 class="text-xl font-bold text-white mb-2 group-hover:text-blue-400 transition-colors"><%= task.mata_kuliah %></h3>
                                        <div class="text-gray-400 text-sm leading-relaxed mb-4 bg-black/20 p-3 rounded-lg"><%= task.deskripsi %></div>
                                    </div>
                                    <div class="mt-4 pt-4 border-t border-gray-700 flex items-center text-red-400 font-medium">
                                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                        <span class="text-sm">
                                            <%= task.deadline ? new Date(task.deadline).toLocaleString('id-ID', { weekday: 'long', day: 'numeric', month: 'long', hour: '2-digit', minute:'2-digit' }) : 'Tidak ada deadline' %>
                                        </span>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                        <div id="emptyFilterMessage" class="hidden flex-col items-center justify-center p-12 bg-gray-800/50 rounded-3xl border border-gray-700 text-center mt-6">
                            <svg class="w-16 h-16 text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                            <h3 class="text-xl font-bold text-gray-400">Tidak ada tugas</h3>
                            <p class="text-gray-500 mt-2">Tidak ada tugas untuk minggu yang dipilih.</p>
                        </div>
                    <% } else { %>
                        <div class="flex flex-col items-center justify-center p-12 bg-gray-800/50 rounded-3xl border border-gray-700 text-center">
                            <svg class="w-20 h-20 text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path></svg>
                            <h3 class="text-2xl font-bold text-gray-400">Tidak Ada Tugas</h3>
                            <p class="text-gray-500 mt-2">Belum ada tugas yang diupload untuk saat ini. Santai dulu!</p>
                        </div>
                    <% } %>
                </div>
                
                <footer class="relative z-20 text-center p-6 md:p-8 text-gray-500 text-sm md:text-base mt-12">
                    Â© 2025 Dardcor. Semua hak cipta dilindungi.
                </footer>
            </main>
        </div>
    </div> 
    
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const toggleButton = document.getElementById('sidebarToggle');
            const sidebar = document.getElementById('sidebar');
            const backdrop = document.getElementById('sidebarBackdrop');
            const closeButton = document.getElementById('sidebarCloseButton');
            const navbar = document.getElementById('navbar');

            let sidebarOpen = false;

            function openSidebar() {
                sidebar.classList.remove('-translate-x-full');
                if (window.innerWidth < 1024) {
                    backdrop.classList.remove('hidden');
                    setTimeout(() => backdrop.classList.remove('opacity-0'), 10);
                    document.body.style.overflow = 'hidden';
                }
                sidebarOpen = true;
            }

            function closeSidebar() {
                sidebar.classList.add('-translate-x-full');
                if (window.innerWidth < 1024) {
                    backdrop.classList.add('opacity-0');
                    setTimeout(() => backdrop.classList.add('hidden'), 300);
                    document.body.style.overflow = '';
                }
                sidebarOpen = false;
            }

            function toggleSidebar() {
                if (sidebarOpen) {
                    closeSidebar();
                } else {
                    openSidebar();
                }
            }

            if (toggleButton) toggleButton.addEventListener('click', toggleSidebar);
            
            if (closeButton) {
                closeButton.addEventListener('click', closeSidebar);
            }
            
            if (backdrop) {
                backdrop.addEventListener('click', closeSidebar);
            }

            window.addEventListener('scroll', () => {
                if (window.scrollY > 10) {
                    navbar.classList.add('navbar-scrolled');
                } else {
                    navbar.classList.remove('navbar-scrolled');
                }
            });

            window.addEventListener('resize', () => {
                if (window.innerWidth >= 1024) {
                    backdrop.classList.add('hidden');
                    backdrop.classList.add('opacity-0');
                    document.body.style.overflow = '';
                    
                    if (sidebarOpen) {
                        closeSidebar();
                    }
                } else {
                    if (sidebarOpen) {
                        sidebar.classList.add('-translate-x-full');
                        backdrop.classList.add('hidden');
                        backdrop.classList.add('opacity-0');
                        document.body.style.overflow = '';
                        sidebarOpen = false;
                    }
                }
            });

            document.querySelectorAll('nav a').forEach(link => {
                link.addEventListener('click', () => {
                    if (window.innerWidth < 1024) {
                        closeSidebar();
                    }
                });
            });

            if (window.innerWidth >= 1024) {
                closeSidebar();
            }

            // Filter Logic
            const weekFilter = document.getElementById('weekFilter');
            const taskCards = document.querySelectorAll('.task-card');
            const emptyMessage = document.getElementById('emptyFilterMessage');

            if (weekFilter && taskCards.length > 0) {
                weekFilter.addEventListener('change', function() {
                    const selectedWeek = this.value;
                    let visibleCount = 0;
                    taskCards.forEach(card => {
                        const cardWeek = card.getAttribute('data-week');
                        if (selectedWeek === 'all' || cardWeek === selectedWeek) {
                            card.classList.remove('hidden');
                            visibleCount++;
                        } else {
                            card.classList.add('hidden');
                        }
                    });
                    if (visibleCount === 0) {
                        emptyMessage.classList.remove('hidden');
                        emptyMessage.classList.add('flex');
                    } else {
                        emptyMessage.classList.add('hidden');
                        emptyMessage.classList.remove('flex');
                    }
                });
            }
        });
    </script>
</body>
</html>