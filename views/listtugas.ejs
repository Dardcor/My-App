<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>Dardcor</title>
    <link rel="icon" href="/logo.png">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        html { scroll-behavior: smooth; }
        body { 
            background-color: #1a1a2e; 
            min-height: 100vh; 
            font-family: sans-serif; 
            overflow-x: hidden; 
            color: #cbd5e1;
        }
        .sidebar { background-color: #16213e; box-shadow: 0 5px 20px rgba(0,0,0,0.4); }
        
        .task-card {
            background-color: #1e293b; 
            border: 1px solid #334155;
            transition: all 0.3s ease;
            animation: fadeIn 0.5s ease-out;
        }
        .task-card:hover {
            transform: translateY(-5px);
            border-color: #3b82f6;
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        }
        
        .badge-week { background-color: #3b82f6; color: white; }
        .badge-day { background-color: #0f172a; color: #94a3b8; border: 1px solid #334155; }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
</head>
<body class="relative">
    <div class="relative min-h-screen">
        
        <aside id="sidebar" class="sidebar fixed h-full z-50 w-0 p-0 text-white transition-all duration-300 ease-in-out overflow-hidden flex-shrink-0 flex flex-col">
            <div class="flex items-center gap-4 pb-4 border-b border-white/20 mb-4 flex-shrink-0 pt-6 px-6">
                <button id="sidebarCloseButton" class="p-1 rounded-full text-white/70 hover:bg-white/10 hover:text-white transition-colors">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                </button>
                <h2 class="text-2xl font-bold">My App</h2>
            </div>
            <nav class="flex-grow px-6"> 
                <ul>
                    <li class="mb-4"><a href="/" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors hover:bg-blue-600"><svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6-4a1 1 0 001-1v-1a1 1 0 10-2 0v1a1 1 0 001 1z"></path></svg><span>Home</span></a></li>
                    <li class="mb-4"><a href="/list-ai" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors hover:bg-blue-600"><svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M12 5V3m0 18v-2M7.05 7.05l-1.414-1.414M18.364 18.364l-1.414-1.414M7.05 18.364l-1.414 1.414M18.364 7.05l-1.414 1.414M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg><span>List AI</span></a></li>
                    <li class="mb-4"><a href="/jadwal-kuliah" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors hover:bg-blue-600"><svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg><span>Jadwal Kuliah</span></a></li>
                    <li class="mb-4"><a href="/list-tugas" class="flex items-center gap-3 text-lg font-medium p-3 rounded-lg transition-colors bg-blue-600 text-white"><svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path></svg><span>List Tugas</span></a></li>
                </ul>
            </nav>
        </aside>

        <div class="fixed top-0 left-0 w-full p-4 md:p-6 flex justify-center z-30">
            <nav class="w-full max-w-6xl bg-white/90 backdrop-blur-sm rounded-full shadow-lg border border-gray-200/50 flex items-center justify-between px-4 py-3">
                <div class="flex items-center gap-1 md:gap-3">
                    <button id="sidebarToggle" class="text-gray-700 p-2 transition-colors hover:bg-gray-100 rounded-full">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
                    </button>
                    <a href="/" class="flex items-center gap-2"><span class="text-xl font-bold text-gray-800">Dardcor</span></a>
                </div>
                <a href="/admin" class="w-10 h-10 rounded-full flex items-center justify-center bg-gray-100 hover:bg-gray-200 transition-colors">
                    <img src="/logo.png" alt="Logo Admin" class="w-full h-full object-contain p-1 rounded-full">
                </a>
            </nav>
        </div>
        
        <div class="absolute top-0 left-0 w-full h-48 sm:h-64 md:h-80 lg:h-96 z-10">
            <img src="/header.jpg" alt="Header" class="w-full h-full object-cover">
            <div class="absolute inset-0 bg-black/40"></div>
        </div>

        <main class="relative min-h-screen">
            <div class="relative w-full px-4 py-8 pt-48 sm:pt-64 md:pt-80 lg:pt-96 z-20 max-w-6xl mx-auto">
                
                <div class="mb-8 text-center md:text-left flex flex-col md:flex-row justify-between items-end gap-4">
                    <div>
                        <h1 class="text-3xl md:text-4xl font-extrabold text-white drop-shadow-lg">Daftar Tugas Kuliah</h1>
                        <p class="text-gray-300 mt-2 text-lg">Pantau deadline dan selesaikan tugas tepat waktu.</p>
                    </div>

                    <div class="w-full md:w-64">
                        <label for="weekFilter" class="block mb-2 text-sm font-medium text-gray-300">Filter Minggu:</label>
                        <select id="weekFilter" class="bg-gray-800 border border-gray-600 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                            <option value="all" selected>Tampilkan Semua</option>
                            <% for(let i=1; i<=16; i++) { %>
                                <option value="<%= i %>">Minggu <%= i %></option>
                            <% } %>
                        </select>
                    </div>
                </div>

                <% if (tasks && tasks.length > 0) { %>
                    <div id="tasksContainer" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        <% tasks.forEach(task => { %>
                            <div class="task-card rounded-2xl p-6 flex flex-col h-full relative overflow-hidden group" data-week="<%= task.minggu %>">
                                <div class="flex justify-between items-start mb-4">
                                    <span class="badge-week text-xs font-bold px-3 py-1 rounded-full shadow-sm">
                                        Minggu <%= task.minggu %>
                                    </span>
                                    <span class="badge-day text-xs font-medium px-3 py-1 rounded-full">
                                        <%= task.hari %>
                                    </span>
                                </div>

                                <div class="flex-grow">
                                    <h3 class="text-xl font-bold text-white mb-2 group-hover:text-blue-400 transition-colors">
                                        <%= task.mata_kuliah %>
                                    </h3>
                                    <div class="text-gray-400 text-sm leading-relaxed mb-4 bg-black/20 p-3 rounded-lg">
                                        <%= task.deskripsi %>
                                    </div>
                                </div>

                                <div class="mt-4 pt-4 border-t border-gray-700 flex items-center text-red-400 font-medium">
                                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                    <span class="text-sm">
                                        <%= task.deadline ? new Date(task.deadline).toLocaleString('id-ID', { weekday: 'long', day: 'numeric', month: 'long', hour: '2-digit', minute:'2-digit' }) : 'Tidak ada deadline' %>
                                    </span>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                    
                    <div id="emptyFilterMessage" class="hidden flex-col items-center justify-center p-12 bg-gray-800/50 rounded-3xl border border-gray-700 text-center mt-6">
                        <svg class="w-16 h-16 text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                        <h3 class="text-xl font-bold text-gray-400">Tidak ada tugas</h3>
                        <p class="text-gray-500 mt-2">Tidak ada tugas untuk minggu yang dipilih.</p>
                    </div>

                <% } else { %>
                    <div class="flex flex-col items-center justify-center p-12 bg-gray-800/50 rounded-3xl border border-gray-700 text-center">
                        <svg class="w-20 h-20 text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path></svg>
                        <h3 class="text-2xl font-bold text-gray-400">Tidak Ada Tugas</h3>
                        <p class="text-gray-500 mt-2">Belum ada tugas yang diupload untuk saat ini. Santai dulu!</p>
                    </div>
                <% } %>
            </div>
            
            <footer class="relative z-20 text-center p-6 sm:p-8 text-gray-500 text-sm sm:text-base mt-12">
                Â© 2025 Dardcor. Semua hak cipta dilindungi.
            </footer>
        </main>
    </div> 
    
    <div id="sidebarBackdrop" class="fixed inset-0 bg-black/50 z-40 hidden"></div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Sidebar Logic
            const toggleButton = document.getElementById('sidebarToggle');
            const sidebar = document.getElementById('sidebar');
            const backdrop = document.getElementById('sidebarBackdrop');
            const closeButton = document.getElementById('sidebarCloseButton');

            function toggleSidebar() {
                sidebar.classList.toggle('w-60');
                sidebar.classList.toggle('w-0');
                sidebar.classList.toggle('p-0');
                backdrop.classList.toggle('hidden');
            }

            if (toggleButton) toggleButton.addEventListener('click', toggleSidebar);
            if (backdrop) backdrop.addEventListener('click', toggleSidebar);
            if (closeButton) closeButton.addEventListener('click', toggleSidebar);

            // Filter Logic
            const weekFilter = document.getElementById('weekFilter');
            const taskCards = document.querySelectorAll('.task-card');
            const emptyMessage = document.getElementById('emptyFilterMessage');

            if (weekFilter && taskCards.length > 0) {
                weekFilter.addEventListener('change', function() {
                    const selectedWeek = this.value;
                    let visibleCount = 0;

                    taskCards.forEach(card => {
                        const cardWeek = card.getAttribute('data-week');
                        
                        if (selectedWeek === 'all' || cardWeek === selectedWeek) {
                            card.classList.remove('hidden');
                            visibleCount++;
                        } else {
                            card.classList.add('hidden');
                        }
                    });

                    // Tampilkan pesan jika tidak ada hasil filter
                    if (visibleCount === 0) {
                        emptyMessage.classList.remove('hidden');
                        emptyMessage.classList.add('flex');
                    } else {
                        emptyMessage.classList.add('hidden');
                        emptyMessage.classList.remove('flex');
                    }
                });
            }
        });
    </script>
</body>
</html>