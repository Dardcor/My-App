{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "server.js"
        }
    ],
    "crons": [
        {
            "path": "/api/cron/sehat",
            "schedule": "*/1 * * * *"
        },
        {
            "path": "/api/cron/sholat/Subuh",
            "schedule": "30 4 * * *",
            "timezone": "Asia/Jakarta"
        },
        {
            "path": "/api/cron/sholat/Dzuhur",
            "schedule": "0 12 * * *",
            "timezone": "Asia/Jakarta"
        },
        {
            "path": "/api/cron/sholat/Ashar",
            "schedule": "0 15 * * *",
            "timezone": "Asia/Jakarta"
        },
        {
            "path": "/api/cron/sholat/Maghrib",
            "schedule": "0 18 * * *",
            "timezone": "Asia/Jakarta"
        },
        {
            "path": "/api/cron/sholat/Isya",
            "schedule": "0 19 * * *",
            "timezone": "Asia/Jakarta"
        }
    ]
}